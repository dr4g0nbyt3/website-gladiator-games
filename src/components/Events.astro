---
const events = [
  {
    title: 'Retro Night',
    date: 'Friday, November 6th, 2025',
    time: '7:00 PM',
    description: 'Join us for a nostalgic evening of classic gaming, retro tournaments, and throwback vibes!',
    status: 'Upcoming',
  },
];
---

<section id="events" class="py-16 md:py-24 bg-gradient-to-b from-brand-black to-brand-gray-dark">
  <div class="container-custom">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Upcoming Events</h2>
      <p class="text-brand-gray text-lg">
        Stay tuned for tournaments and competitive gaming events
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-2xl mx-auto">
      {events.map((event) => (
        <div class="card border-l-4 border-brand-orange-hover hover:border-brand-orange transition-all col-span-full">
          <div class="flex items-center justify-between mb-4">
            <span class="text-xs font-bold text-brand-orange-hover uppercase tracking-wide">
              {event.status}
            </span>
            <span class="text-brand-cyan font-bold">{event.time}</span>
          </div>
          <h3 class="text-2xl md:text-3xl font-bold mb-3">{event.title}</h3>
          <p class="text-brand-white mb-3 font-semibold">{event.date}</p>
          <p class="text-brand-gray">{event.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
