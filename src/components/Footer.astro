<footer id="contact" class="bg-brand-gray-dark border-t border-brand-black">
  <div class="container-custom py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 mb-8">
      <!-- Contact Info -->
      <div class="lg:col-span-1">
        <div class="flex items-center gap-3 mb-4">
          <img src="/images/branding/logo-white.png" alt="Gladiator Games" class="h-9 md:h-12" loading="eager" title="Gladiator Games">
          <div class="flex flex-col leading-none items-center">
            <span class="text-brand-white font-normal text-[0.656rem] md:text-sm uppercase tracking-wide mb-0.5 md:mb-[-0.2rem]">GLADIATOR</span>
            <span class="text-brand-white font-bold text-[1.069rem] md:text-[1.425rem] uppercase tracking-wide">GAMES</span>
          </div>
        </div>
        <p class="text-brand-gray mb-4">
          Uniting gamers to create thriving, meaningful communities
        </p>
        <div class="flex space-x-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target={social.href !== '#' ? '_blank' : undefined}
              rel={social.href !== '#' ? 'noopener noreferrer' : undefined}
              class="w-6 h-6 text-brand-white hover:text-brand-orange-hover transition-colors no-underline"
              aria-label={social.name}
            >
              <Fragment set:html={getSocialIcon(social.icon)} />
            </a>
          ))}
        </div>
      </div>

      <!-- Location & Hours -->
      <div>
        <h3 class="font-bold mb-4 text-brand-white">Visit Us</h3>
        <ul class="space-y-2 text-brand-gray">
          <li class="no-underline">
            2017 Christy Dr.<br />
            Jefferson City, MO 65101
          </li>
          <li class="mt-3">
            <a href="tel:5733381481" class="hover:text-brand-white transition-colors no-underline">
              (573) 338-1481
            </a>
          </li>
          <li>
            <a href="mailto:info@gladiatorgames.net" class="hover:text-brand-white transition-colors no-underline">
              info@gladiatorgames.net
            </a>
          </li>
        </ul>
      </div>

      <div>
        <h3 class="font-bold mb-4 text-brand-white">Hours</h3>
        <ul class="space-y-1 text-brand-gray">
          <li>Mon-Thu: 11am-10pm</li>
          <li>Fri-Sat: 11am-11pm</li>
          <li>Sunday: 11am-8pm</li>
        </ul>
      </div>

      <!-- Links Section -->
      <div>
        <h3 class="font-bold mb-4 text-brand-white">Quick Links</h3>
        <ul class="space-y-2">
          {Object.values(footerLinks).flat().map((link) => (
            <li>
              <a
                href={link.href}
                class="text-brand-gray hover:text-brand-white transition-colors no-underline"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Watch Live Section -->
      <div>
        <div class="bg-gradient-to-r from-brand-orange/10 via-brand-purple/10 to-brand-cyan/10 rounded-lg p-4 border border-brand-orange/30">
          <div class="flex items-center mb-3">
            <div class="w-3 h-3 bg-red-500 rounded-full animate-pulse mr-2"></div>
            <h3 class="text-lg font-bold text-brand-white">Watch Live</h3>
          </div>
          <p class="text-brand-gray text-sm mb-4">
            See what's happening right now!
          </p>
          <a
            href="https://www.twitch.tv/gladiatorgamesgamingcafe"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 bg-purple-600 hover:bg-purple-700 text-white font-semibold px-4 py-2 rounded-lg transition-colors no-underline text-sm w-full justify-center"
          >
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M11.571 4.714h1.715v5.143H11.57zm4.715 0H18v5.143h-1.714zM6 0L1.714 4.286v15.428h5.143V24l4.286-4.286h3.428L22.286 12V0zm14.571 11.143l-3.428 3.428h-3.429l-3 3v-3H6.857V1.714h13.714Z"/>
            </svg>
            Watch on Twitch
          </a>
        </div>
      </div>
    </div>

    <div class="border-t border-brand-black pt-8 text-center text-brand-gray">
      <p>&copy; {currentYear} Gladiator Games. All rights reserved.</p>
      <p class="mt-2 text-sm">
        Website Designed and Managed by <a href="https://www.aibexp.com/?ref=https://www.gladiatorgames.net/" target="_blank" rel="noopener" class="no-underline hover:brightness-110 transition-colors"><span class="text-brand-orange font-semibold">BXP</span><span class="text-brand-gray"> - Custom Software & Business Growth Solutions</span></a>
      </p>
    </div>
  </div>
</footer>
