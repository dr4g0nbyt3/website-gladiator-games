---
const navItems = [
  { name: 'Home', href: '/' },
  {
    name: 'Play',
    dropdown: [
      { name: 'Games', href: '/games' },
      { name: 'Servers', href: '/servers' },
      { name: 'Tools', href: '/tools' },
      { name: 'Specs', href: '/specs' },
    ]
  },
  {
    name: 'Community',
    dropdown: [
      { name: 'Events', href: '/events' },
      { name: 'Parties', href: '/parties' },
      { name: 'Blog', href: '/blog' },
      { name: 'Partners', href: '/partners' },
      { name: 'Gallery', href: '/gallery' },
    ]
  },
  {
    name: 'About',
    dropdown: [
      { name: 'Visit', href: '/visit' },
      { name: 'Careers', href: '/careers' },
      { name: 'Franchise', href: '/franchise' },
      { name: 'Press Kit', href: '/media-kit' },
    ]
  },
  { name: 'Contact', href: '/contact' },
];
---

<header id="main-header" class="bg-brand-black/40 backdrop-blur-2xl backdrop-saturate-150 border-b border-brand-gray-dark/30 sticky top-0 z-50 transition-all duration-300" style="backdrop-filter: blur(40px) saturate(180%); -webkit-backdrop-filter: blur(40px) saturate(180%);">
  <nav class="container-custom py-4">
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <a href="/" class="no-underline hover:opacity-80 transition-opacity">
          <img src="/images/branding/logo-white.png" alt="Gladiator Games" class="h-12 md:h-16" />
        </a>
      </div>

      <ul class="hidden md:flex space-x-8">
        {navItems.map((item) => (
          <li class="relative group">
            {item.dropdown ? (
              <>
                <button class="text-brand-white hover:text-brand-orange-hover transition-colors font-medium flex items-center gap-1">
                  {item.name}
                  <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                <div class="absolute top-full left-0 mt-2 w-48 bg-brand-gray-dark/95 backdrop-blur-xl border border-brand-gray/30 rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 overflow-hidden">
                  {item.dropdown.map((subItem) => (
                    <a
                      href={subItem.href}
                      class="block px-4 py-3 text-brand-white hover:bg-brand-orange/20 hover:text-brand-orange transition-colors no-underline font-medium border-b border-brand-gray/20 last:border-b-0"
                    >
                      {subItem.name}
                    </a>
                  ))}
                </div>
              </>
            ) : (
              <a
                href={item.href}
                class="text-brand-white hover:text-brand-orange-hover transition-colors no-underline font-medium"
              >
                {item.name}
              </a>
            )}
          </li>
        ))}
      </ul>

      <!-- Mobile menu button -->
      <button id="mobile-menu-button" class="md:hidden text-brand-white" aria-label="Toggle navigation menu">
        <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
      <ul class="space-y-2">
        {navItems.map((item, index) => (
          <li>
            {item.dropdown ? (
              <div>
                <button
                  class="mobile-dropdown-toggle w-full flex items-center justify-between px-4 py-2 text-brand-white hover:bg-brand-gray-dark hover:text-brand-orange-hover transition-colors font-medium rounded-lg"
                  data-index={index}
                >
                  {item.name}
                  <svg class="mobile-dropdown-icon w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                <div class="mobile-dropdown-content hidden ml-4 mt-2 space-y-1" data-index={index}>
                  {item.dropdown.map((subItem) => (
                    <a
                      href={subItem.href}
                      class="block px-4 py-2 text-brand-gray hover:bg-brand-gray-dark hover:text-brand-orange transition-colors no-underline font-medium rounded-lg"
                    >
                      {subItem.name}
                    </a>
                  ))}
                </div>
              </div>
            ) : (
              <a
                href={item.href}
                class="block px-4 py-2 text-brand-white hover:bg-brand-gray-dark hover:text-brand-orange-hover transition-colors no-underline font-medium rounded-lg"
              >
                {item.name}
              </a>
            )}
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>

<script>
  // Add scroll effect to header
  let lastScroll = 0;
  const header = document.getElementById('main-header');

  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;

    if (currentScroll > 50) {
      header?.classList.add('bg-brand-black/95');
      header?.classList.add('shadow-lg');
    } else {
      header?.classList.remove('bg-brand-black/95');
      header?.classList.remove('shadow-lg');
    }

    lastScroll = currentScroll;
  });

  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking a link
  const mobileMenuLinks = mobileMenu?.querySelectorAll('a');
  mobileMenuLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    });
  });

  // Mobile dropdown toggles
  const mobileDropdownToggles = document.querySelectorAll('.mobile-dropdown-toggle');
  mobileDropdownToggles.forEach(toggle => {
    toggle.addEventListener('click', () => {
      const index = toggle.getAttribute('data-index');
      const content = document.querySelector(`.mobile-dropdown-content[data-index="${index}"]`);
      const icon = toggle.querySelector('.mobile-dropdown-icon');

      content?.classList.toggle('hidden');
      icon?.classList.toggle('rotate-180');
    });
  });
</script>
