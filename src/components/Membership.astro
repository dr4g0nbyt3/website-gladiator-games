<section id="membership" class="py-16 md:py-24 bg-gradient-to-b from-brand-gray-dark to-brand-black">
  <div class="container-custom">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Unlimited Gaming Membership</h2>
      <p class="text-brand-gray text-lg">
        Choose the plan that fits your gaming lifestyle
      </p>
    </div>

    <div class="max-w-6xl mx-auto grid md:grid-cols-3 gap-6">
      <!-- 16-bit Membership -->
      <div class="relative bg-brand-black border-2 border-brand-gray-dark rounded-2xl p-6 md:p-8 text-center overflow-hidden hover:border-brand-cyan transition-colors">
        <div class="absolute inset-0 bg-gradient-to-br from-brand-cyan/5 via-transparent to-brand-cyan/5 pointer-events-none"></div>

        <div class="relative z-10">
          <div class="mb-6">
            <h3 class="text-2xl font-bold text-brand-white mb-2">16-bit</h3>
            <p class="text-brand-gray text-sm mb-4">For gamers under 16</p>
            <div class="inline-block">
              <span class="text-4xl md:text-5xl font-bold text-brand-white">$16</span>
              <span class="text-xl text-brand-gray">/month</span>
            </div>
          </div>

          <div class="space-y-3 text-left mb-6">
            <div class="flex items-start space-x-2">
              <svg class="w-5 h-5 text-brand-cyan flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <p class="text-brand-gray text-sm">Unlimited play time</p>
            </div>
            <div class="flex items-start space-x-2">
              <svg class="w-5 h-5 text-brand-cyan flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
