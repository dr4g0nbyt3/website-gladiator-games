---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Contact Us - Gladiator Games"
  description="Get in touch with Gladiator Games in Jefferson City, Missouri. Visit us, call, email, or connect on Discord and Twitch."
>
  <Header />
  <main class="bg-brand-black min-h-screen">
    <!-- Hero Section -->
    <section class="py-20 md:py-32 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 text-brand-white">
            Get In Touch
          </h1>
          <p class="text-xl text-brand-gray mb-8">
            Questions? Want to book an event? Just want to say hi? We'd love to hear from you!
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Information -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Visit Us -->
            <div class="card">
              <div class="w-12 h-12 bg-brand-orange/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-3 text-brand-white">Visit Us</h3>
              <p class="text-brand-gray mb-2">
                2017 Christy Dr.<br />
                Jefferson City, MO 65101
              </p>
              <a
                href="https://maps.google.com/?q=2017+Christy+Dr+Jefferson+City+MO+65101"
                target="_blank"
                rel="noopener noreferrer"
                class="text-brand-orange hover:brightness-110 no-underline font-semibold text-sm inline-flex items-center mt-2"
              >
                Get Directions
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>

            <!-- Call Us -->
            <div class="card">
              <div class="w-12 h-12 bg-brand-purple/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-3 text-brand-white">Call Us</h3>
              <a href="tel:5733381481" class="text-brand-gray hover:text-brand-white transition-colors no-underline block mb-2">
                (573) 338-1481
              </a>
              <p class="text-brand-gray text-sm">
                Available during business hours
              </p>
            </div>

            <!-- Email Us -->
            <div class="card">
              <div class="w-12 h-12 bg-brand-cyan/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-3 text-brand-white">Email Us</h3>
              <a href="mailto:info@gladiatorgames.net" class="text-brand-gray hover:text-brand-white transition-colors no-underline block mb-2">
                info@gladiatorgames.net
              </a>
              <p class="text-brand-gray text-sm">
                We'll respond within 24 hours
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Hours -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-brand-white text-center">Hours of Operation</h2>
          <div class="card max-w-md mx-auto">
            <ul class="space-y-3">
              <li class="flex justify-between items-center">
                <span class="text-brand-white font-semibold">Monday - Thursday</span>
                <span class="text-brand-gray">11:00 AM - 10:00 PM</span>
              </li>
              <li class="flex justify-between items-center">
                <span class="text-brand-white font-semibold">Friday - Saturday</span>
                <span class="text-brand-gray">11:00 AM - 11:00 PM</span>
              </li>
              <li class="flex justify-between items-center">
                <span class="text-brand-white font-semibold">Sunday</span>
                <span class="text-brand-gray">11:00 AM - 8:00 PM</span>
              </li>
            </ul>
            <div class="mt-6 pt-6 border-t border-brand-gray-dark">
              <p class="text-brand-gray text-sm text-center">
                Walk-ins welcome! Call ahead for large groups or <a href="/events" class="text-brand-orange hover:brightness-110 no-underline font-semibold">special events</a>.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Social & Community -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-6 text-brand-white">Join Our Community</h2>
          <p class="text-xl text-brand-gray mb-8">
            Connect with us online and stay updated on <a href="/events" class="text-brand-orange hover:brightness-110 no-underline font-semibold">events and tournaments</a>
          </p>

          <div class="grid md:grid-cols-2 gap-6 max-w-2xl mx-auto">
            <!-- Discord -->
            <a
              href="https://discord.gg/PaHrQj2yzv"
              target="_blank"
              rel="noopener noreferrer"
              class="card hover:border-brand-purple transition-all no-underline group"
            >
              <div class="flex items-center justify-center mb-4">
                <div class="w-16 h-16 bg-brand-purple/20 rounded-full flex items-center justify-center group-hover:bg-brand-purple/30 transition-colors">
                  <svg class="w-8 h-8 text-brand-purple" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
                  </svg>
                </div>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white group-hover:text-brand-purple transition-colors">Discord Server</h3>
              <p class="text-brand-gray text-sm">
                Chat with other gamers, get server updates, and stay in the loop
              </p>
            </a>

            <!-- Twitch -->
            <a
              href="https://www.twitch.tv/gladiatorgamesgamingcafe"
              target="_blank"
              rel="noopener noreferrer"
              class="card hover:border-purple-500 transition-all no-underline group"
            >
              <div class="flex items-center justify-center mb-4">
                <div class="w-16 h-16 bg-purple-500/20 rounded-full flex items-center justify-center group-hover:bg-purple-500/30 transition-colors">
                  <svg class="w-8 h-8 text-purple-500" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M11.571 4.714h1.715v5.143H11.57zm4.715 0H18v5.143h-1.714zM6 0L1.714 4.286v15.428h5.143V24l4.286-4.286h3.428L22.286 12V0zm14.571 11.143l-3.428 3.428h-3.429l-3 3v-3H6.857V1.714h13.714Z"/>
                  </svg>
                </div>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white group-hover:text-purple-500 transition-colors">Watch on Twitch</h3>
              <p class="text-brand-gray text-sm">
                See what's happening live at Gladiator Games right now
              </p>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Map Section -->
    <section class="py-16 bg-gradient-to-b from-brand-black to-brand-gray-dark">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-brand-white text-center">Find Us</h2>
          <div class="card overflow-hidden">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3096.9476948976537!2d-92.15997!3d38.56959!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87dcb5e8f8e8f8e8%3A0x0!2s2017%20Christy%20Dr%2C%20Jefferson%20City%2C%20MO%2065101!5e0!3m2!1sen!2sus!4v1234567890123"
              width="100%"
              height="450"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              class="rounded-lg"
            ></iframe>
          </div>
          <div class="mt-6 text-center">
            <p class="text-brand-gray mb-4">
              Located inside Strikers entertainment complex in Jefferson City
            </p>
            <a
              href="https://maps.google.com/?q=2017+Christy+Dr+Jefferson+City+MO+65101"
              target="_blank"
              rel="noopener noreferrer"
              class="btn-primary bg-brand-orange-hover hover:bg-brand-orange"
            >
              Open in Google Maps
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
