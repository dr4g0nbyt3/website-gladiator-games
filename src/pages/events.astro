---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Events & Tournaments - Gladiator Games"
  description="Join our gaming tournaments, LAN parties, and community events in Jefferson City. Compete for prizes and connect with fellow gamers."
>
  <Header />
  <main class="bg-brand-black min-h-screen">
    <!-- Hero Section -->
    <section class="py-20 md:py-32 bg-gradient-to-b from-brand-gray-dark to-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 text-brand-white">
            Events & Tournaments
          </h1>
          <p class="text-xl text-brand-gray mb-8">
            Join our competitive tournaments, community events, and epic LAN parties at Jefferson City's premier gaming center
          </p>
        </div>
      </div>
    </section>

    <!-- Upcoming Events -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-brand-white">Upcoming Events</h2>

          <div class="grid md:grid-cols-2 gap-6 mb-12">
            <!-- Watch Party: Stranger Things -->
            <div class="card border-brand-cyan">
              <div class="flex items-start justify-between mb-4">
                <div>
                  <span class="inline-block bg-brand-cyan/20 text-brand-cyan px-3 py-1 rounded-full text-sm font-semibold mb-2">
                    Watch Party
                  </span>
                  <h3 class="text-2xl font-bold text-brand-white">Stranger Things Watch Party</h3>
                </div>
              </div>
              <div class="space-y-2 text-brand-gray mb-4">
                <p class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-brand-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  TBA
                </p>
                <p class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-brand-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  TBA
                </p>
              </div>
              <p class="text-brand-gray mb-4">
                Join us for the premiere of the latest Stranger Things season! Watch on our big screens, hang out with fellow fans, and enjoy the show together.
              </p>
              <div class="flex items-center justify-between">
                <span class="text-brand-white font-bold">Free Event</span>
                <a href="/#contact" class="btn-primary bg-brand-cyan hover:brightness-110">
                  RSVP
                </a>
              </div>
            </div>

            <!-- Watch Party: The Game Awards -->
            <div class="card border-brand-orange">
              <div class="flex items-start justify-between mb-4">
                <div>
                  <span class="inline-block bg-brand-orange/20 text-brand-orange px-3 py-1 rounded-full text-sm font-semibold mb-2">
                    Watch Party
                  </span>
                  <h3 class="text-2xl font-bold text-brand-white">The Game Awards Watch Party</h3>
                </div>
              </div>
              <div class="space-y-2 text-brand-gray mb-4">
                <p class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  TBA
                </p>
                <p class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  TBA
                </p>
              </div>
              <p class="text-brand-gray mb-4">
                Experience The Game Awards live with the gaming community! Watch the biggest announcements, trailers, and awards on our premium screens.
              </p>
              <div class="flex items-center justify-between">
                <span class="text-brand-white font-bold">Free Event</span>
                <a href="/#contact" class="btn-primary bg-brand-orange hover:brightness-110">
                  RSVP
                </a>
              </div>
            </div>

            <!-- Weekly Rocket League Tournament -->
            <div class="card border-brand-purple">
              <div class="flex items-start justify-between mb-4">
                <div>
                  <span class="inline-block bg-brand-purple/20 text-brand-purple px-3 py-1 rounded-full text-sm font-semibold mb-2">
                    Tournament
                  </span>
                  <h3 class="text-2xl font-bold text-brand-white">Weekly Rocket League Tournament</h3>
                </div>
              </div>
              <div class="space-y-2 text-brand-gray mb-4">
                <p class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-brand-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  Every Saturday
                </p>
                <p class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-brand-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  3:00 PM - 6:00 PM
                </p>
              </div>
              <p class="text-brand-gray mb-4">
                Compete in 3v3 matches for cash prizes and bragging rights. Free entry for 64-BIT members, $10 entry for others.
              </p>
              <div class="flex items-center justify-between">
                <span class="text-brand-white font-bold">Prize Pool: $100</span>
                <a href="/#contact" class="btn-primary bg-brand-purple hover:brightness-110">
                  Sign Up
                </a>
              </div>
            </div>

            <!-- Friday Night LAN Party -->
            <div class="card border-brand-gray">
              <div class="flex items-start justify-between mb-4">
                <div>
                  <span class="inline-block bg-brand-gray/20 text-brand-gray px-3 py-1 rounded-full text-sm font-semibold mb-2">
                    LAN Party
                  </span>
                  <h3 class="text-2xl font-bold text-brand-white">Friday Night LAN Party</h3>
                </div>
              </div>
              <div class="space-y-2 text-brand-gray mb-4">
                <p class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-brand-gray" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  Every Friday
                </p>
                <p class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-brand-gray" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  8:00 PM - 1:00 AM
                </p>
              </div>
              <p class="text-brand-gray mb-4">
                Late-night gaming sessions with your friends. Play any game, meet other gamers, and enjoy our extended hours.
              </p>
              <div class="flex items-center justify-between">
                <span class="text-brand-white font-bold">Free for Members</span>
                <a href="/#contact" class="btn-primary bg-brand-gray hover:brightness-110">
                  Join Us
                </a>
              </div>
            </div>
          </div>

          <div class="text-center">
            <p class="text-brand-gray mb-4">
              Want to host your own tournament or event? Contact us to learn about our event hosting services.
            </p>
            <a href="/#contact" class="btn-primary bg-brand-orange-hover hover:bg-brand-orange">
              Contact Us About Events
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Event Types -->
    <section class="py-16 bg-gradient-to-b from-brand-black to-brand-gray-dark">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-brand-white text-center">Event Types</h2>

          <div class="grid md:grid-cols-3 gap-6">
            <div class="card">
              <div class="w-12 h-12 bg-brand-orange/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">Tournaments</h3>
              <p class="text-brand-gray">
                Competitive gaming tournaments across multiple titles with cash prizes, trophies, and bragging rights.
              </p>
            </div>

            <div class="card">
              <div class="w-12 h-12 bg-brand-purple/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">LAN Parties</h3>
              <p class="text-brand-gray">
                Extended gaming sessions with the community. Play together, make friends, and enjoy special late-night hours.
              </p>
            </div>

            <div class="card">
              <div class="w-12 h-12 bg-brand-cyan/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">Community Events</h3>
              <p class="text-brand-gray">
                Special themed nights, game launches, charity streams, and other community-focused gaming events.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
