---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const events = [
  {
    title: 'The Game Awards Watch Party',
    type: 'Watch Party',
    description: 'Celebrate gaming\'s biggest night! Watch The Game Awards live with the community and see all the major announcements.',
    date: 'Dec 11, 2025',
    time: 'Thursday 7:00pm - 10:00pm',
    entry: 'Free',
    games: [],
    status: 'Free Event',
    color: 'cyan',
    discordUrl: 'https://discord.com/events/1162200581956448267/1436775998892019712',
  },
  {
    title: 'Jefferson City High School eSports Fundraiser',
    type: 'Tournament',
    description: 'Multi-game tournament featuring Warzone, Smash Bros, and Mario Kart! December 19-20. $10 entry and +$5 per additional bracket.',
    date: 'Dec 19-20, 2025',
    time: 'Fri 4pm-11pm, Sat 11am-11pm',
    entry: '$10 entry and +$5 per additional bracket',
    games: ['Warzone', 'Smash Bros', 'Mario Kart'],
    status: 'Registration Open',
    color: 'orange',
    discordUrl: 'https://discord.com/events/1162200581956448267/1440110177163542548',
    registrationUrl: 'https://www.start.gg/tournament/jefferson-city-esports-fundraiser/details',
  },
];
---

<Layout
  title="Events & Tournaments - Gladiator Games"
  description="Join our gaming tournaments, LAN parties, and community events in Jefferson City. Compete for prizes and connect with fellow gamers."
>
  <Header />
  <main class="bg-brand-black min-h-screen">
    <!-- Hero Section -->
    <section class="py-20 md:py-32 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 text-brand-white">
            Events & Tournaments
          </h1>
          <p class="text-xl text-brand-gray mb-8">
            Join our competitive tournaments, community events, and epic LAN parties at <a href="/contact" class="text-brand-orange hover:brightness-110 no-underline font-semibold">Jefferson City's premier gaming center</a>
          </p>
        </div>
      </div>
    </section>

    <!-- Upcoming Events -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-brand-white">Upcoming Events</h2>

          <div class="max-w-4xl mx-auto space-y-6 mb-12">
            {events.map((event) => {
              const colorClasses = {
                orange: {
                  border: 'border-brand-orange/30 hover:border-brand-orange',
                  bg: 'bg-brand-orange/20',
                  text: 'text-brand-orange'
                },
                purple: {
                  border: 'border-brand-purple/30 hover:border-brand-purple',
                  bg: 'bg-brand-purple/20',
                  text: 'text-brand-purple'
                },
                cyan: {
                  border: 'border-brand-cyan/30 hover:border-brand-cyan',
                  bg: 'bg-brand-cyan/20',
                  text: 'text-brand-cyan'
                }
              };
              const colors = colorClasses[event.color] || colorClasses.orange;

              return (
                <div class={`card border-2 ${colors.border} transition-all`}>
                  <div class="mb-4">
                    <span class={`inline-block ${colors.bg} ${colors.text} px-3 py-1 rounded-full text-sm font-semibold mb-2`}>
                      {event.type}
                    </span>
                    <h3 class="text-2xl font-bold text-brand-white mb-2">{event.title}</h3>
                    <p class="text-brand-gray text-sm mb-4">{event.description}</p>
                  </div>

                  <div class="grid md:grid-cols-2 gap-4 mb-4">
                    <div>
                      <div class="text-brand-white font-semibold text-sm mb-1">Date & Time</div>
                      <div class="text-brand-gray text-sm">{event.date}</div>
                      <div class="text-brand-gray text-sm">{event.time}</div>
                    </div>
                    <div>
                      <div class="text-brand-white font-semibold text-sm mb-1">Pricing</div>
                      <div class={`${colors.text} text-sm font-bold`}>{event.entry}</div>
                    </div>
                  </div>

                  {event.games.length > 0 && (
                    <div class="mb-4">
                      <div class="text-brand-white font-semibold text-sm mb-2">Games</div>
                      <div class="flex flex-wrap gap-2">
                        {event.games.map((game) => (
                          <span class="bg-brand-gray-dark text-brand-white px-3 py-1 rounded-full text-xs">
                            {game}
                          </span>
                        ))}
                      </div>
                    </div>
                  )}

                  <div class="pt-4 border-t border-brand-gray-dark">
                    <div class="flex items-center justify-between mb-3">
                      <span class={`${colors.text} font-semibold text-sm`}>{event.status}</span>
                    </div>
                    <div class="space-y-2">
                      {event.registrationUrl && (
                        <a
                          href={event.registrationUrl}
                          target="_blank"
                          rel="noopener noreferrer"
                          class={`flex items-center justify-center gap-2 w-full ${colors.bg} ${colors.text} border-2 ${colors.text.replace('text-', 'border-')} hover:brightness-110 px-4 py-2 rounded-lg font-semibold text-sm transition-colors no-underline`}
                        >
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                          </svg>
                          Tournament Registration
                        </a>
                      )}
                      {event.discordUrl && (
                        <a
                          href={event.discordUrl}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="flex items-center justify-center gap-2 w-full bg-[#5865F2] hover:bg-[#4752C4] text-white px-4 py-2 rounded-lg font-semibold text-sm transition-colors no-underline"
                        >
                          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
                          </svg>
                          View on Discord
                        </a>
                      )}
                    </div>
                  </div>
                </div>
              );
            })}
          </div>

          <div class="grid md:grid-cols-2 gap-6 mb-12" style="display:none;">
            <!-- Tournament: Super Smash Bros -->
            <div class="card border-brand-orange">
              <div class="flex items-start justify-between mb-4">
                <div>
                  <span class="inline-block bg-brand-orange/20 text-brand-orange px-3 py-1 rounded-full text-sm font-semibold mb-2">
                    Tournament
                  </span>
                  <h3 class="text-2xl font-bold text-brand-white">Super Smash Bros Tournament</h3>
                </div>
              </div>
              <div class="space-y-2 text-brand-gray mb-4">
                <p class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  Date TBA - Coming Soon!
                </p>
                <p class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  </svg>
                  Open Registration
                </p>
              </div>
              <p class="text-brand-gray mb-4">
                Bring your A-game to our Super Smash Bros tournament! Compete against Jefferson City's best players for prizes and glory.
              </p>
              <div class="flex items-center justify-between">
                <span class="text-brand-white font-bold">Prizes TBA</span>
                <a href="/contact" class="btn-primary bg-brand-orange hover:brightness-110">
                  Stay Updated
                </a>
              </div>
            </div>

            <!-- Tournament: Rocket League -->
            <div class="card border-brand-purple">
              <div class="flex items-start justify-between mb-4">
                <div>
                  <span class="inline-block bg-brand-purple/20 text-brand-purple px-3 py-1 rounded-full text-sm font-semibold mb-2">
                    Tournament
                  </span>
                  <h3 class="text-2xl font-bold text-brand-white">Rocket League Tournament</h3>
                </div>
              </div>
              <div class="space-y-2 text-brand-gray mb-4">
                <p class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-brand-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  Date TBA - Coming Soon!
                </p>
                <p class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-brand-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  </svg>
                  Teams or Solo
                </p>
              </div>
              <p class="text-brand-gray mb-4">
                Rev up your engines! Join our Rocket League tournament featuring intense 1v1, 2v2, and 3v3 competitive matches.
              </p>
              <div class="flex items-center justify-between">
                <span class="text-brand-white font-bold">Prizes TBA</span>
                <a href="/contact" class="btn-primary bg-brand-purple hover:brightness-110">
                  Stay Updated
                </a>
              </div>
            </div>

            <!-- Tournament: League of Legends -->
            <div class="card border-brand-cyan">
              <div class="flex items-start justify-between mb-4">
                <div>
                  <span class="inline-block bg-brand-cyan/20 text-brand-cyan px-3 py-1 rounded-full text-sm font-semibold mb-2">
                    Tournament
                  </span>
                  <h3 class="text-2xl font-bold text-brand-white">League of Legends Tournament</h3>
                </div>
              </div>
              <div class="space-y-2 text-brand-gray mb-4">
                <p class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-brand-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  Date TBA - Coming Soon!
                </p>
                <p class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-brand-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  </svg>
                  5v5 Team Format
                </p>
              </div>
              <p class="text-brand-gray mb-4">
                Summoners, assemble! Compete in our League of Legends tournament and prove your team has what it takes to dominate the Rift.
              </p>
              <div class="flex items-center justify-between">
                <span class="text-brand-white font-bold">Prizes TBA</span>
                <a href="/contact" class="btn-primary bg-brand-cyan hover:brightness-110">
                  Stay Updated
                </a>
              </div>
            </div>

            <!-- Watch Parties Info -->
            <div class="card border-brand-orange/50">
              <div class="flex items-start justify-between mb-4">
                <div>
                  <span class="inline-block bg-brand-orange/20 text-brand-orange px-3 py-1 rounded-full text-sm font-semibold mb-2">
                    Watch Parties
                  </span>
                  <h3 class="text-2xl font-bold text-brand-white">Community Watch Parties</h3>
                </div>
              </div>
              <div class="space-y-2 text-brand-gray mb-4">
                <p class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                  </svg>
                  Game Awards, Esports Finals, & More
                </p>
                <p class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"></path>
                  </svg>
                  Request via Discord
                </p>
              </div>
              <p class="text-brand-gray mb-4">
                Want to watch a major gaming event or esports tournament with the community? Message us on Discord and we'll set up a free watch party!
              </p>
              <div class="flex items-center justify-between">
                <span class="text-brand-white font-bold">Free Events</span>
                <a href="/contact" class="btn-primary bg-brand-orange hover:brightness-110">
                  Join Discord
                </a>
              </div>
            </div>

          </div>

          <div class="text-center">
            <p class="text-brand-gray mb-4">
              Want to host your own tournament or event? Contact us to learn about our event hosting services.
            </p>
            <a href="/#contact" class="btn-primary bg-brand-orange-hover hover:bg-brand-orange">
              Contact Us About Events
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Past Events -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-brand-white">Past Events</h2>

          <div class="grid md:grid-cols-2 gap-6">
            <!-- Living Windows 2025 -->
            <a href="/events/living-windows-2025" class="card border-2 border-brand-cyan/30 hover:border-brand-cyan transition-all group no-underline">
              <div class="aspect-video w-full overflow-hidden rounded-lg mb-4">
                <img
                  src="/images/events/living-windows-2025/mobile-gaming-setup-downtown-jefferson-city.png"
                  alt="Gladiator Games portable gaming at Living Windows 2025 Jefferson City - Nintendo Switch gaming on downtown streets"
                  title="Living Windows 2025 gaming event - Gladiator Games Jefferson City"
                  loading="lazy"
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
              </div>
              <div class="mb-4">
                <span class="inline-block bg-brand-cyan/20 text-brand-cyan px-3 py-1 rounded-full text-sm font-semibold mb-2">
                  Community Event
                </span>
                <h3 class="text-2xl font-bold text-brand-white mb-2">Living Windows 2025</h3>
                <p class="text-brand-gray text-sm mb-2">December 5, 2025 â€¢ Downtown Jefferson City</p>
                <p class="text-brand-gray text-sm">
                  We brought mobile gaming to Jefferson City's historic Living Windows celebration with a one-wheel pulled gaming setup, giving hundreds of community members the chance to game on the streets.
                </p>
              </div>
              <div class="flex items-center text-brand-cyan text-sm font-semibold group-hover:gap-2 transition-all">
                View Event Gallery
                <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </a>

            <!-- More past events can be added here -->
          </div>

          <div class="text-center mt-8">
            <a href="/events/past" class="text-brand-orange hover:brightness-110 font-semibold inline-flex items-center gap-2">
              View All Past Events
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Event Types -->
    <section class="py-16 bg-gradient-to-b from-brand-black to-brand-gray-dark">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-brand-white text-center">Event Types</h2>

          <div class="grid md:grid-cols-3 gap-6">
            <div class="card">
              <div class="w-12 h-12 bg-brand-orange/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">Tournaments</h3>
              <p class="text-brand-gray">
                Competitive gaming tournaments across multiple titles with cash prizes, trophies, and bragging rights.
              </p>
            </div>

            <div class="card">
              <div class="w-12 h-12 bg-brand-purple/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">LAN Parties</h3>
              <p class="text-brand-gray">
                Extended gaming sessions with the community. Play together, make friends, and enjoy special late-night hours.
              </p>
            </div>

            <div class="card">
              <div class="w-12 h-12 bg-brand-cyan/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">Community Events</h3>
              <p class="text-brand-gray">
                Special themed nights, game launches, charity streams, and other community-focused gaming events.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
