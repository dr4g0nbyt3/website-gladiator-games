---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout
  title="Gladiator Games at Living Windows 2025 - Gaming on Downtown Streets | Jefferson City"
  description="Gladiator Games brought portable Nintendo Switch gaming to Living Windows 2025 in Downtown Jefferson City with a one-wheel pulled gaming setup. See photos of gamers playing Super Smash Bros, Mario Kart 8, and Minecraft on the streets during this annual holiday tradition."
>
  <Header />
  <main class="bg-brand-black min-h-screen">
    <!-- Hero Section with Video -->
    <section class="py-20 md:py-32 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <span class="inline-block bg-brand-orange/20 text-brand-orange px-4 py-2 rounded-full text-sm font-semibold mb-4">
            Community Event
          </span>
          <h1 class="text-4xl md:text-6xl font-bold mb-6 text-brand-white">
            Gladiator Games at<br/>Living Windows 2025
          </h1>
          <p class="text-xl text-brand-gray mb-4">
            December 5, 2025 • Downtown Jefferson City
          </p>
          <p class="text-lg text-brand-gray max-w-3xl mx-auto mb-8">
            We brought portable Nintendo Switch gaming to Jefferson City's historic Living Windows celebration, giving hundreds of community members the chance to play Super Smash Bros, Mario Kart 8, and Minecraft on the streets during this beloved holiday tradition.
          </p>

          <!-- Featured Compilation Video -->
          <div class="max-w-4xl mx-auto mb-12">
            <div class="rounded-lg overflow-hidden shadow-2xl">
              <video
                controls
                autoplay
                muted
                loop
                playsinline
                preload="metadata"
                class="w-full"
                poster="/images/events/living-windows-2025/mobile-gaming-setup-downtown-jefferson-city.png"
                aria-label="Gladiator Games Living Windows 2025 event compilation video - portable Nintendo Switch gaming on Jefferson City downtown streets"
                title="Living Windows 2025 Event Highlights - Gladiator Games portable gaming in Downtown Jefferson City"
              >
                <source src="/images/events/living-windows-2025/living-windows-2025-display-video.mov" type="video/quicktime" />
                <track kind="captions" label="English captions" />
                Your browser does not support the video tag. <a href="/images/events/living-windows-2025/living-windows-2025-display-video.mov" download>Download the video</a>
              </video>
            </div>
            <p class="text-brand-gray text-sm mt-2 text-center">
              <svg class="w-4 h-4 inline-block mr-1 text-brand-orange" fill="currentColor" viewBox="0 0 20 20">
                <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"></path>
              </svg>
              Event Highlight Video • With Audio
            </p>
          </div>

          <!-- Additional Event Footage -->
          <div class="max-w-6xl mx-auto">
            <h3 class="text-xl font-bold text-brand-white text-center mb-4">Additional Event Footage</h3>
            <div class="grid md:grid-cols-2 gap-6">
              <!-- First Video -->
              <div>
                <div class="rounded-lg overflow-hidden shadow-2xl">
                  <video
                    controls
                    preload="metadata"
                    class="w-full"
                    poster="/images/events/living-windows-2025/mobile-gaming-setup-downtown-jefferson-city.png"
                    aria-label="Gladiator Games portable gaming setup at Living Windows 2025 Jefferson City"
                  >
                    <source src="/images/events/living-windows-2025/gladiator-games-living-windows-2025.mov" type="video/quicktime" />
                    <source src="/images/events/living-windows-2025/gladiator-games-living-windows-2025.mp4" type="video/mp4" />
                    <track kind="captions" label="English captions" />
                    Your browser does not support the video tag. <a href="/images/events/living-windows-2025/gladiator-games-living-windows-2025.mov" download>Download the video</a>
                  </video>
                </div>
                <p class="text-brand-gray text-sm mt-2 text-center">Watch Gladiator Games bring portable Switch gaming to downtown Jefferson City streets</p>
              </div>

              <!-- Second Video -->
              <div>
                <div class="rounded-lg overflow-hidden shadow-2xl">
                  <video
                    controls
                    preload="metadata"
                    class="w-full"
                    poster="/images/events/living-windows-2025/gladiator-games-team-living-windows.png"
                    aria-label="Gladiator Games team bringing portable gaming to Living Windows 2025 Jefferson City streets"
                  >
                    <source src="/images/events/living-windows-2025/gladiator-games-living-windows-2025-mobile-gaming.mov" type="video/quicktime" />
                    <track kind="captions" label="English captions" />
                    Your browser does not support the video tag. <a href="/images/events/living-windows-2025/gladiator-games-living-windows-2025-mobile-gaming.mov" download>Download the video</a>
                  </video>
                </div>
                <p class="text-brand-gray text-sm mt-2 text-center">Community members enjoying portable Switch gaming at Living Windows downtown event</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Event Story Section -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <div class="card mb-12">
            <h2 class="text-3xl font-bold mb-6 text-brand-white">Gaming Meets Tradition</h2>
            <div class="prose prose-invert max-w-none">
              <p class="text-brand-gray text-lg mb-4">
                On December 5, 2025, Gladiator Games made its debut at Jefferson City's 37th annual Living Windows event, bringing an exciting new twist to the downtown holiday celebration. Our team assembled a one-of-a-kind portable gaming unit—affectionately nicknamed "The Contraption" by team member Taylor Meloy—complete with LED-lit gaming towers, a Nintendo Switch, and a festive setup that fit right in with the holiday spirit.
              </p>
              <p class="text-brand-gray text-lg mb-4">
                <strong class="text-brand-white">The Setup:</strong> The Contraption featured a custom cart adorned with green and red LED lights, pulled through downtown Jefferson City by team member Josh Arnold riding a one-wheel. The eye-catching setup included gaming monitors displaying popular Nintendo Switch titles like Super Smash Bros, Mario Kart 8, and Minecraft, creating an instant attraction for event attendees of all ages.
              </p>
              <p class="text-brand-gray text-lg mb-4">
                Throughout the evening, kids and families lined up to play games on our portable unit, experiencing family-friendly gaming right on the streets. The combination of competitive gaming and community celebration created unforgettable moments as generations came together to share in the fun.
              </p>
            </div>
          </div>

          <!-- Team Section -->
          <div class="card mb-12">
            <h3 class="text-2xl font-bold mb-4 text-brand-white">Our Amazing Team</h3>
            <p class="text-brand-gray mb-6">
              Huge shoutout to the Gladiator Games crew who made this event possible:
            </p>
            <div class="grid md:grid-cols-2 gap-4">
              <ul class="space-y-2 text-brand-gray">
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-brand-orange rounded-full mr-3"></span>
                  Josh Arnold (One-Wheel Pilot)
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-brand-orange rounded-full mr-3"></span>
                  Jarod Viestra
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-brand-orange rounded-full mr-3"></span>
                  Caleb McGennis
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-brand-orange rounded-full mr-3"></span>
                  Tanner Whitemore
                </li>
              </ul>
              <ul class="space-y-2 text-brand-gray">
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-brand-orange rounded-full mr-3"></span>
                  Taylor Meloy
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-brand-orange rounded-full mr-3"></span>
                  Eli Albo
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-brand-orange rounded-full mr-3"></span>
                  Sage Jakobi
                </li>
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-brand-orange rounded-full mr-3"></span>
                  Molly Viestra
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Photo Gallery -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-brand-white text-center">Event Gallery</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="card overflow-hidden">
              <img
                src="/images/events/living-windows-2025/mobile-gaming-setup-downtown-jefferson-city.png"
                alt="Portable gaming setup with LED lights on downtown Jefferson City streets during Living Windows 2025"
                title="Gladiator Games portable gaming unit at Living Windows Jefferson City"
                loading="lazy"
                class="w-full h-64 object-cover"
              />
              <div class="p-4">
                <p class="text-brand-gray text-sm">Portable gaming unit on the streets</p>
              </div>
            </div>
            <div class="card overflow-hidden">
              <img
                src="/images/events/living-windows-2025/gladiator-games-team-living-windows.png"
                alt="Gladiator Games team with portable gaming setup at Living Windows 2025 Jefferson City"
                title="Gladiator Games team at Living Windows downtown event"
                loading="lazy"
                class="w-full h-64 object-cover"
              />
              <div class="p-4">
                <p class="text-brand-gray text-sm">Team with the setup</p>
              </div>
            </div>
            <div class="card overflow-hidden">
              <img
                src="/images/events/living-windows-2025/rocket-league-gaming-living-windows.png"
                alt="Gamers playing Nintendo Switch games on portable gaming setup at Living Windows Jefferson City 2025"
                title="Switch gameplay at Living Windows street gaming event"
                loading="lazy"
                class="w-full h-64 object-cover"
              />
              <div class="p-4">
                <p class="text-brand-gray text-sm">Switch gameplay action</p>
              </div>
            </div>
            <div class="card overflow-hidden">
              <img
                src="/images/events/living-windows-2025/gaming-celebration-downtown-jefferson-city.png"
                alt="Team member celebrating at Living Windows 2025 gaming event downtown Jefferson City"
                title="Gaming celebration at Living Windows Jefferson City"
                loading="lazy"
                class="w-full h-64 object-cover"
              />
              <div class="p-4">
                <p class="text-brand-gray text-sm">Celebrating the event</p>
              </div>
            </div>
            <div class="card overflow-hidden">
              <img
                src="/images/events/living-windows-2025/kids-playing-pc-games-living-windows.png"
                alt="Kids gaming on portable Switch setup at Jefferson City Living Windows 2025 holiday event"
                title="Kids playing Switch games at Living Windows downtown"
                loading="lazy"
                class="w-full h-64 object-cover"
              />
              <div class="p-4">
                <p class="text-brand-gray text-sm">Kids enjoying Switch gaming</p>
              </div>
            </div>
            <div class="card overflow-hidden">
              <img
                src="/images/events/living-windows-2025/community-gaming-jefferson-city.png"
                alt="Community members gaming together at Living Windows downtown Jefferson City event 2025"
                title="Community gaming at Living Windows Jefferson City"
                loading="lazy"
                class="w-full h-64 object-cover"
              />
              <div class="p-4">
                <p class="text-brand-gray text-sm">Community gaming together</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- About Living Windows -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <div class="card">
            <h2 class="text-3xl font-bold mb-6 text-brand-white">About Living Windows</h2>
            <p class="text-brand-gray text-lg mb-4">
              Living Windows is Jefferson City's premier holiday celebration, bringing the community together since 1988. This beloved annual event transforms downtown High Street into a winter wonderland featuring live performances, from live music to pottery demonstrations and local artisans showcasing their crafts.
            </p>
            <p class="text-brand-gray text-lg mb-6">
              Thousands of residents and visitors attend each year, making it a cherished tradition for families across central Missouri. The event creates opportunities for people to celebrate together and share holiday traditions across generations.
            </p>

            <h3 class="text-xl font-bold mb-4 text-brand-white">Read More About the Event</h3>
            <div class="space-y-3">
              <a href="https://krcgtv.com/news/local/jefferson-city-residents-gather-to-honor-holiday-traditions-at-living-windows-event" target="_blank" rel="noopener noreferrer" class="block p-4 bg-brand-black/50 rounded-lg hover:bg-brand-black transition-colors no-underline">
                <div class="flex items-center justify-between">
                  <div>
                    <div class="text-brand-white font-semibold mb-1">KRCG TV 13 Coverage</div>
                    <div class="text-brand-gray text-sm">Residents gather to honor holiday traditions</div>
                  </div>
                  <svg class="w-5 h-5 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                </div>
              </a>
              <a href="https://www.newstribune.com/news/2025/dec/06/thousands-flock-to-living-windows/" target="_blank" rel="noopener noreferrer" class="block p-4 bg-brand-black/50 rounded-lg hover:bg-brand-black transition-colors no-underline">
                <div class="flex items-center justify-between">
                  <div>
                    <div class="text-brand-white font-semibold mb-1">News Tribune</div>
                    <div class="text-brand-gray text-sm">Thousands flock to Living Windows</div>
                  </div>
                  <svg class="w-5 h-5 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                </div>
              </a>
              <a href="https://www.kcworldcupguide.com/connections/54340-downtown-jefferson-city/events/2025/12/5/293354/living-windows-downtown-jefferson-city-december-5th/" target="_blank" rel="noopener noreferrer" class="block p-4 bg-brand-black/50 rounded-lg hover:bg-brand-black transition-colors no-underline">
                <div class="flex items-center justify-between">
                  <div>
                    <div class="text-brand-white font-semibold mb-1">KC World Cup Guide</div>
                    <div class="text-brand-gray text-sm">Event coverage and details</div>
                  </div>
                  <svg class="w-5 h-5 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                </div>
              </a>
              <a href="https://business.jcchamber.org/community-calendar/Details/living-windows-downtown-jefferson-city-1249925?sourceTypeId=Website" target="_blank" rel="noopener noreferrer" class="block p-4 bg-brand-black/50 rounded-lg hover:bg-brand-black transition-colors no-underline">
                <div class="flex items-center justify-between">
                  <div>
                    <div class="text-brand-white font-semibold mb-1">Jefferson City Chamber</div>
                    <div class="text-brand-gray text-sm">Official event listing</div>
                  </div>
                  <svg class="w-5 h-5 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-gradient-to-b from-brand-black to-brand-gray-dark">
      <div class="container-custom">
        <div class="max-w-2xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-4 text-brand-white">Experience Gaming at Gladiator Games</h2>
          <p class="text-brand-gray text-lg mb-8">
            Loved seeing gaming at Living Windows? Visit us at our Jefferson City location for the ultimate gaming experience with 100+ games, pro equipment, and a welcoming community.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/pricing" class="btn-primary bg-brand-orange hover:brightness-110">
              View Pricing & Memberships
            </a>
            <a href="/visit" class="btn-primary bg-brand-purple hover:brightness-110">
              Plan Your Visit
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
