---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const pastEvents = [
  {
    title: 'Living Windows 2025',
    type: 'Community Event',
    description: 'We brought portable gaming to Jefferson City\'s historic Living Windows celebration with "The Contraption" - a one-wheel pulled gaming setup featuring Nintendo Switch, giving hundreds of community members the chance to game on the downtown streets.',
    date: 'December 5, 2025',
    location: 'Downtown Jefferson City',
    image: '/images/events/living-windows-2025/mobile-gaming-setup-downtown-jefferson-city.png',
    href: '/events/living-windows-2025',
    color: 'cyan',
  },
  // Future past events will be added here
];
---

<Layout
  title="Past Events Archive | Gladiator Games Jefferson City"
  description="Browse our archive of past gaming events, tournaments, and community gatherings at Gladiator Games in Jefferson City, MO."
>
  <Header />
  <main class="bg-brand-black min-h-screen">
    <!-- Hero Section -->
    <section class="py-20 md:py-32 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 text-brand-white">
            Past Events Archive
          </h1>
          <p class="text-xl text-brand-gray mb-8">
            A history of our tournaments, community events, and gaming celebrations in Jefferson City
          </p>
          <a href="/events" class="text-brand-orange hover:brightness-110 font-semibold">
            ← Back to Upcoming Events
          </a>
        </div>
      </div>
    </section>

    <!-- Past Events Grid -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <div class="grid md:grid-cols-2 gap-6 mb-12">
            {pastEvents.map((event) => {
              const colorClasses = {
                orange: {
                  border: 'border-brand-orange/30 hover:border-brand-orange',
                  bg: 'bg-brand-orange/20',
                  text: 'text-brand-orange'
                },
                purple: {
                  border: 'border-brand-purple/30 hover:border-brand-purple',
                  bg: 'bg-brand-purple/20',
                  text: 'text-brand-purple'
                },
                cyan: {
                  border: 'border-brand-cyan/30 hover:border-brand-cyan',
                  bg: 'bg-brand-cyan/20',
                  text: 'text-brand-cyan'
                }
              };
              const colors = colorClasses[event.color] || colorClasses.orange;

              return (
                <a href={event.href} class={`card border-2 ${colors.border} transition-all group no-underline`}>
                  <div class="aspect-video w-full overflow-hidden rounded-lg mb-4">
                    <img
                      src={event.image}
                      alt={event.title}
                      loading="lazy"
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    />
                  </div>
                  <div class="mb-4">
                    <span class={`inline-block ${colors.bg} ${colors.text} px-3 py-1 rounded-full text-sm font-semibold mb-2`}>
                      {event.type}
                    </span>
                    <h3 class="text-2xl font-bold text-brand-white mb-2">{event.title}</h3>
                    <p class="text-brand-gray text-sm mb-2">{event.date} • {event.location}</p>
                    <p class="text-brand-gray text-sm">
                      {event.description}
                    </p>
                  </div>
                  <div class={`flex items-center ${colors.text} text-sm font-semibold group-hover:gap-2 transition-all`}>
                    View Event Gallery
                    <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </div>
                </a>
              );
            })}
          </div>

          {pastEvents.length === 0 && (
            <div class="text-center py-12">
              <p class="text-brand-gray text-lg">
                No past events yet. Check back soon!
              </p>
            </div>
          )}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-gradient-to-b from-brand-black to-brand-gray-dark">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-4 text-brand-white">Don't Miss Our Next Event</h2>
          <p class="text-brand-gray mb-8">
            Join our Discord community to stay updated on upcoming tournaments, watch parties, and community events
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/events" class="btn-primary bg-brand-orange hover:brightness-110">
              View Upcoming Events
            </a>
            <a
              href="https://discord.gg/PaHrQj2yzv"
              target="_blank"
              rel="noopener noreferrer"
              class="btn-primary bg-[#5865F2] hover:bg-[#4752C4] inline-flex items-center justify-center gap-2"
            >
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
              </svg>
              Join Our Discord
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
