---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { games, getGameBySlug, getGameImage } from '../../data/games';

export async function getStaticPaths() {
  return games.map((game) => ({
    params: { slug: game.slug },
    props: { game },
  }));
}

const { game } = Astro.props;

// Get related games from same category (up to 3)
const relatedGames = games
  .filter(g => g.category === game.category && g.slug !== game.slug)
  .slice(0, 3);

const gameImage = getGameImage(game);
---

<Layout
  title={`Play ${game.name} in Jefferson City | Gladiator Games`}
  description={`${game.description} Visit Jefferson City's premier gaming center for ${game.name} on premium hardware with high-speed internet.`}
>
  <Header />
  <main class="bg-brand-black min-h-screen">
    <!-- Game Header -->
    <section class="py-20 md:py-32 bg-gradient-to-b from-brand-gray-dark to-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <div class="mb-6">
            <a href="/games" class="text-brand-orange hover:brightness-110 no-underline font-semibold inline-flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
              Back to All Games
            </a>
          </div>

          {gameImage && (
            <div class="mb-8 rounded-lg overflow-hidden shadow-2xl">
              <img
                src={gameImage}
                alt={game.name}
                class="w-full"
              />
            </div>
          )}

          <span class="inline-block bg-brand-orange/20 text-brand-orange px-4 py-2 rounded-full text-sm font-semibold mb-4">
            {game.category}
          </span>
          <h1 class="text-4xl md:text-6xl font-bold mb-6 text-brand-white">
            {game.name}
          </h1>
          <p class="text-xl text-brand-gray leading-relaxed">
            {game.description}
          </p>
        </div>
      </div>
    </section>

    <!-- Why Play Here -->
    <section class="py-16">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-brand-white">
            Why Play {game.name} at Gladiator Games?
          </h2>
          <div class="grid md:grid-cols-2 gap-6">
            <div class="card">
              <div class="w-12 h-12 bg-brand-orange/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">Premium Hardware</h3>
              <p class="text-brand-gray">
                High-end gaming PCs with the latest GPUs, high refresh rate monitors, and pro-level peripherals for the ultimate gaming experience.
              </p>
            </div>

            <div class="card">
              <div class="w-12 h-12 bg-brand-orange/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">Lightning-Fast Internet</h3>
              <p class="text-brand-gray">
                Ultra-low latency connections ensure smooth gameplay with no lag, perfect for competitive gaming.
              </p>
            </div>

            <div class="card">
              <div class="w-12 h-12 bg-brand-orange/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">Gaming Community</h3>
              <p class="text-brand-gray">
                Connect with fellow {game.name} players, <a href="/events" class="text-brand-orange hover:brightness-110 no-underline font-semibold">join tournaments</a>, and compete with the best in Jefferson City.
              </p>
            </div>

            <div class="card">
              <div class="w-12 h-12 bg-brand-orange/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">Flexible Hours</h3>
              <p class="text-brand-gray">
                <a href="/contact" class="text-brand-orange hover:brightness-110 no-underline font-semibold">Open 7 days a week</a> with hourly rates, daily passes, and unlimited monthly memberships available.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Pricing -->
    <section class="py-16 bg-gradient-to-b from-brand-black to-brand-gray-dark">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-4 text-brand-white">
            Ready to Play {game.name}?
          </h2>
          <p class="text-brand-gray mb-8">Choose walk-in rates or <a href="/#membership" class="text-brand-orange hover:brightness-110 no-underline font-semibold">unlimited membership</a></p>

          <!-- Walk-in Rates -->
          <div class="mb-12">
            <h3 class="text-xl font-semibold mb-4 text-brand-white">Walk-in Rates</h3>
            <div class="grid md:grid-cols-2 gap-4 max-w-2xl mx-auto">
              <div class="card text-center">
                <div class="text-3xl font-bold text-brand-orange mb-2">$10</div>
                <div class="text-brand-gray mb-2">Per Hour</div>
                <p class="text-sm text-brand-gray">Perfect for quick sessions</p>
              </div>
              <div class="card text-center">
                <div class="text-3xl font-bold text-brand-orange mb-2">$20</div>
                <div class="text-brand-gray mb-2">All Day</div>
                <p class="text-sm text-brand-gray">Play as long as you want</p>
              </div>
            </div>
          </div>

          <!-- Membership Tiers -->
          <div>
            <h3 class="text-xl font-semibold mb-4 text-brand-white">Monthly Memberships</h3>
            <div class="grid md:grid-cols-3 gap-4">
              <div class="card text-center border-brand-cyan hover:border-brand-cyan transition-colors">
                <div class="text-sm font-bold text-brand-cyan mb-2">16-BIT</div>
                <div class="text-3xl font-bold text-brand-white mb-1">$16</div>
                <div class="text-brand-gray text-sm mb-2">Per Month</div>
                <p class="text-xs text-brand-gray">Under 16 • E-T games</p>
              </div>
              <div class="card text-center border-2 border-brand-orange">
                <div class="text-sm font-bold text-brand-orange mb-2">32-BIT</div>
                <div class="text-3xl font-bold text-brand-white mb-1">$32</div>
                <div class="text-brand-gray text-sm mb-2">Per Month</div>
                <p class="text-xs text-brand-gray">Unlimited gaming access</p>
              </div>
              <div class="card text-center border-brand-purple hover:border-brand-purple transition-colors">
                <div class="text-sm font-bold text-brand-purple mb-2">64-BIT</div>
                <div class="text-3xl font-bold text-brand-white mb-1">$64</div>
                <div class="text-brand-gray text-sm mb-2">Per Month</div>
                <p class="text-xs text-brand-gray">+1 guest, streaming, free tournaments</p>
              </div>
            </div>
          </div>

          <div class="space-y-4 mt-8">
            <p class="text-brand-gray text-sm">
              <a href="/contact" class="text-brand-orange hover:brightness-110 no-underline font-semibold">Visit us in person to sign up</a> • No long-term commitment • Walk-in rates available
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="/#contact" class="btn-primary bg-brand-orange-hover hover:bg-brand-orange">
                Visit Us Today
              </a>
              <a href="tel:5736162779" class="btn-primary bg-brand-black border-2 border-brand-orange-hover text-brand-orange-hover hover:bg-brand-orange-hover hover:text-brand-white">
                Call (573) 616-2779
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Location Info -->
    <section class="py-16 bg-gradient-to-b from-brand-black to-brand-gray-dark">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-6 text-brand-white">
            Find Us in Jefferson City
          </h2>
          <p class="text-xl text-brand-gray mb-8">
            Located at Strikers in Jefferson City, Missouri
          </p>
          <div class="grid md:grid-cols-2 gap-6 text-left">
            <div class="card">
              <h3 class="text-xl font-bold mb-3 text-brand-white">Address</h3>
              <p class="text-brand-gray mb-2">2017 Christy Dr.</p>
              <p class="text-brand-gray">Jefferson City, MO 65101</p>
            </div>
            <div class="card">
              <h3 class="text-xl font-bold mb-3 text-brand-white">Hours</h3>
              <p class="text-brand-gray">Mon-Thu: 11am-10pm</p>
              <p class="text-brand-gray">Fri-Sat: 11am-11pm</p>
              <p class="text-brand-gray">Sunday: 11am-8pm</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Related Games -->
    {relatedGames.length > 0 && (
      <section class="py-16 bg-gradient-to-b from-brand-gray-dark to-brand-black">
        <div class="container-custom">
          <div class="max-w-4xl mx-auto">
            <h2 class="text-3xl font-bold mb-8 text-brand-white">
              More {game.category} Games
            </h2>
            <div class="grid md:grid-cols-3 gap-6">
              {relatedGames.map((relatedGame) => {
                const relatedGameImage = getGameImage(relatedGame);
                return (
                <a
                  href={`/games/${relatedGame.slug}`}
                  class="card hover:border-brand-orange transition-all duration-300 no-underline group overflow-hidden p-0"
                >
                  {relatedGameImage ? (
                    <div class="aspect-video w-full overflow-hidden bg-brand-gray-dark flex items-center justify-center">
                      <img
                        src={relatedGameImage}
                        alt={relatedGame.name}
                        class="w-full h-full object-contain group-hover:scale-105 transition-transform duration-300"
                        loading="lazy"
                      />
                    </div>
                  ) : (
                    <div class="aspect-video w-full bg-brand-gray-dark flex items-center justify-center">
                      <svg class="w-12 h-12 text-brand-gray" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"></path>
                      </svg>
                    </div>
                  )}
                  <div class="p-4">
                    <h3 class="text-lg font-bold mb-2 text-brand-white group-hover:text-brand-orange transition-colors">
                      {relatedGame.name}
                    </h3>
                    <p class="text-brand-gray text-sm mb-3 line-clamp-2">
                      {relatedGame.description}
                    </p>
                    <div class="flex items-center text-brand-orange text-sm font-semibold">
                      Learn More
                      <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </div>
                  </div>
                </a>
              )})}
            </div>
            <div class="mt-8 text-center">
              <a href="/games" class="text-brand-orange hover:brightness-110 no-underline font-semibold">
                View All 100+ Games →
              </a>
            </div>
          </div>
        </div>
      </section>
    )}
  </main>
  <Footer />
</Layout>
