---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { games, getGamesByCategory, getGameImage } from '../../data/games';

const gamesByCategory = getGamesByCategory();
const categories = Object.keys(gamesByCategory).sort();
---

<Layout
  title="100+ Games Available | Gladiator Games Jefferson City"
  description="Play over 100 PC games including League of Legends, Valorant, Minecraft, Fortnite, and more at Jefferson City's premier gaming center."
>
  <Header />
  <main class="bg-brand-black min-h-screen">
    <!-- Hero Section -->
    <section class="py-20 md:py-32 bg-gradient-to-b from-brand-gray-dark to-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 text-brand-white">
            100+ Games Available
          </h1>
          <p class="text-xl text-brand-gray mb-8">
            From competitive esports to casual favorites, we've got every game you want to play on premium gaming hardware
          </p>
          <div class="flex flex-wrap justify-center gap-4 mb-8">
            <span class="bg-brand-orange/20 text-brand-orange px-4 py-2 rounded-full font-semibold">Premium Hardware</span>
            <span class="bg-brand-orange/20 text-brand-orange px-4 py-2 rounded-full font-semibold">High-Speed Internet</span>
            <span class="bg-brand-orange/20 text-brand-orange px-4 py-2 rounded-full font-semibold">Pro Peripherals</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Search and Filter Section -->
    <section class="py-8 bg-brand-gray-dark/50 sticky top-0 z-40">
      <div class="container-custom">
        <div class="max-w-2xl mx-auto">
          <input
            type="text"
            id="game-search"
            placeholder="Search for a game..."
            class="w-full px-6 py-3 rounded-lg bg-brand-black border border-brand-gray-dark text-brand-white placeholder-brand-gray focus:outline-none focus:border-brand-orange"
          />
        </div>
      </div>
    </section>

    <!-- Games by Category -->
    <section class="py-16">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          {categories.map((category) => (
            <div class="mb-16" data-category={category}>
              <h2 class="text-3xl font-bold mb-6 text-brand-white border-l-4 border-brand-orange pl-4">
                {category}
              </h2>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {gamesByCategory[category].map((game) => {
                  const gameImage = getGameImage(game);
                  return (
                  <a
                    href={`/games/${game.slug}`}
                    class="card hover:border-brand-orange transition-all duration-300 no-underline group overflow-hidden p-0"
                    data-game-name={game.name.toLowerCase()}
                  >
                    {gameImage ? (
                      <div class="aspect-video w-full overflow-hidden bg-brand-gray-dark flex items-center justify-center">
                        <img
                          src={gameImage}
                          alt={game.name}
                          class="w-full h-full object-contain group-hover:scale-105 transition-transform duration-300"
                          loading="lazy"
                        />
                      </div>
                    ) : (
                      <div class="aspect-video w-full bg-brand-gray-dark flex items-center justify-center">
                        <svg class="w-16 h-16 text-brand-gray" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"></path>
                        </svg>
                      </div>
                    )}
                    <div class="p-6">
                      <h3 class="text-xl font-bold mb-2 text-brand-white group-hover:text-brand-orange transition-colors">
                        {game.name}
                      </h3>
                      <p class="text-brand-gray text-sm mb-3">
                        {game.description}
                      </p>
                      <div class="flex items-center text-brand-orange text-sm font-semibold">
                        Learn More
                        <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                      </div>
                    </div>
                  </a>
                )})}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-16 bg-gradient-to-b from-brand-black to-brand-gray-dark">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <div class="bg-gradient-to-r from-brand-orange/10 via-brand-purple/10 to-brand-cyan/10 rounded-lg p-6 border border-brand-orange/30">
            <div class="flex items-center justify-center mb-4">
              <div class="w-3 h-3 bg-brand-orange rounded-full animate-pulse mr-2"></div>
              <h2 class="text-2xl md:text-3xl font-bold text-brand-white">Ready to Play?</h2>
            </div>
            <p class="text-brand-gray text-center mb-6">
              Visit us today and play any of these games on premium gaming hardware
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="/#contact" class="btn-primary bg-brand-orange-hover hover:bg-brand-orange">
                Visit Us Today
              </a>
              <a href="/#membership" class="btn-primary bg-brand-black border-2 border-brand-orange-hover text-brand-orange-hover hover:bg-brand-orange-hover hover:text-brand-white">
                View Membership
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<script>
  // Search functionality
  const searchInput = document.getElementById('game-search') as HTMLInputElement;

  searchInput?.addEventListener('input', (e) => {
    const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();
    const gameCards = document.querySelectorAll('[data-game-name]');
    const categories = document.querySelectorAll('[data-category]');

    gameCards.forEach((card) => {
      const gameName = card.getAttribute('data-game-name') || '';
      if (gameName.includes(searchTerm)) {
        (card as HTMLElement).style.display = '';
      } else {
        (card as HTMLElement).style.display = 'none';
      }
    });

    // Hide empty categories
    categories.forEach((category) => {
      const visibleGames = category.querySelectorAll('[data-game-name]:not([style*="display: none"])');
      if (visibleGames.length === 0) {
        (category as HTMLElement).style.display = 'none';
      } else {
        (category as HTMLElement).style.display = '';
      }
    });
  });
</script>
