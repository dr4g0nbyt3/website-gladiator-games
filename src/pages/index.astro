---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import FirstVisit from '../components/FirstVisit.astro';
import Stakes from '../components/Stakes.astro';
import Membership from '../components/Membership.astro';
import Success from '../components/Success.astro';
import Games from '../components/Games.astro';
import Events from '../components/Events.astro';
import Testimonials from '../components/Testimonials.astro';
import Partners from '../components/Partners.astro';
import FAQ from '../components/FAQ.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Gladiator Games - Jefferson City's PC Gaming Arena | $16/Month Unlimited"
  description="Stop losing to lag. Start winning. Pro-level gaming PCs for just $16/month. No contracts. Find your squad at Jefferson City's only PC gaming arena."
>
  <Header />
  <main>
    <Hero />
    <FirstVisit />
    <Stakes />
    <Membership />
    <Success />
    <Games />
    <Events />
    <Testimonials />
    <Partners />
    <FAQ />

    <!-- Call to Action -->
    <section class="py-16 bg-gradient-to-b from-brand-black to-brand-gray-dark">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <div class="bg-gradient-to-r from-brand-orange/10 via-brand-purple/10 to-brand-cyan/10 rounded-lg p-6 border border-brand-orange/30">
            <div class="flex items-center justify-center mb-4">
              <div class="w-3 h-3 bg-brand-orange rounded-full animate-pulse mr-2"></div>
              <h2 class="text-2xl md:text-3xl font-bold text-brand-white">Ready to Level Up?</h2>
            </div>
            <p class="text-brand-gray text-center mb-6">
              Your skills deserve better equipment. Your talent deserves a fair&nbsp;shot.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="#membership" class="btn-primary bg-brand-orange-hover hover:bg-brand-orange">
                Join the Arena
              </a>
              <a href="/visit" class="btn-primary bg-brand-black border-2 border-brand-orange-hover text-brand-orange-hover hover:bg-brand-orange-hover hover:text-brand-white">
                See How It Works
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
