---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const partyTypes = [
  {
    title: 'Birthday Parties',
    description: 'Epic gaming birthday parties with unlimited play, private party rooms, and catering options',
    image: '/images/branding/hero-image.avif',
    href: '/parties/birthday',
    icon: 'cake',
  },
  {
    title: 'Bachelor/Bachelorette Parties',
    description: 'Celebrate your last gaming night as a single player with an unforgettable party experience',
    image: '/images/branding/hero-image.avif',
    href: '/parties/bachelor',
    icon: 'champagne',
  },
  {
    title: 'Corporate Events',
    description: 'Team building, company parties, and networking events in a high-tech gaming environment',
    image: '/images/branding/hero-image.avif',
    href: '/parties/corporate',
    icon: 'briefcase',
  },
  {
    title: 'Tournament Hosting',
    description: 'Host your own esports tournament with professional equipment and streaming setup',
    image: '/images/branding/hero-image.avif',
    href: '/parties/tournaments',
    icon: 'trophy',
  },
];
---

<Layout
  title="Host Your Event at Gladiator Games | Private Party Rooms in Jefferson City"
  description="Host birthday parties, bachelor parties, corporate events, and gaming tournaments at Jefferson City's premier gaming center. Private rooms, catering, and premium equipment available."
>
  <Header />
  <main class="bg-brand-black min-h-screen">
    <!-- Hero Section -->
    <section class="py-20 md:py-32 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 text-brand-white">
            Host Your Event at Gladiator Games
          </h1>
          <p class="text-xl md:text-2xl text-brand-gray mb-8">
            Private party rooms, premium gaming equipment, and unforgettable experiences for groups of all sizes
          </p>
          <a href="/contact" class="btn-primary bg-brand-orange-hover hover:bg-brand-orange">
            Book Your Event
          </a>
        </div>
      </div>
    </section>

    <!-- Event Types Grid -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-12 text-brand-white text-center">
            Perfect Venue for Any Occasion
          </h2>
          <div class="grid md:grid-cols-2 gap-8">
            {partyTypes.map((party) => (
              <a
                href={party.href}
                class="card hover:border-brand-orange transition-all duration-300 no-underline group"
              >
                <div class="aspect-video w-full overflow-hidden rounded-lg bg-brand-gray-dark flex items-center justify-center mb-4">
                  <img
                    src={party.image}
                    alt={party.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300 opacity-50"
                  />
                </div>
                <h3 class="text-2xl font-bold mb-3 text-brand-white group-hover:text-brand-orange transition-colors">
                  {party.title}
                </h3>
                <p class="text-brand-gray mb-4 leading-relaxed">
                  {party.description}
                </p>
                <div class="flex items-center text-brand-orange font-semibold">
                  Learn More
                  <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Game-Specific Parties -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-4 text-brand-white text-center">
            Game-Specific Party Packages
          </h2>
          <p class="text-brand-gray text-center mb-12 max-w-3xl mx-auto">
            Love a specific game? Check out our dedicated party packages with custom tournaments,
            game modes, and activities tailored to your favorite titles!
          </p>
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            <a
              href="/parties/minecraft"
              class="card hover:border-brand-orange transition-all duration-300 no-underline group"
            >
              <div class="w-12 h-12 bg-brand-orange/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white group-hover:text-brand-orange transition-colors">
                Minecraft Parties
              </h3>
              <p class="text-brand-gray text-sm mb-4">
                Build, explore, and celebrate on our private Minecraft server with custom worlds and mini-games
              </p>
              <div class="flex items-center text-brand-orange font-semibold text-sm">
                Learn More
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </a>

            <a
              href="/parties/fortnite"
              class="card hover:border-brand-purple transition-all duration-300 no-underline group"
            >
              <div class="w-12 h-12 bg-brand-purple/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white group-hover:text-brand-purple transition-colors">
                Fortnite Parties
              </h3>
              <p class="text-brand-gray text-sm mb-4">
                Squad up for Victory Royales with Battle Royale matches, Creative modes, and build battle tournaments
              </p>
              <div class="flex items-center text-brand-purple font-semibold text-sm">
                Learn More
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </a>

            <a
              href="/parties/league-of-legends"
              class="card hover:border-brand-cyan transition-all duration-300 no-underline group"
            >
              <div class="w-12 h-12 bg-brand-cyan/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white group-hover:text-brand-cyan transition-colors">
                League of Legends Parties
              </h3>
              <p class="text-brand-gray text-sm mb-4">
                Epic 5v5 matches on Summoner's Rift, ARAM tournaments, and custom game modes for legendary celebrations
              </p>
              <div class="flex items-center text-brand-cyan font-semibold text-sm">
                Learn More
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </a>

            <a
              href="/parties/roblox"
              class="card hover:border-brand-purple transition-all duration-300 no-underline group"
            >
              <div class="w-12 h-12 bg-brand-purple/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white group-hover:text-brand-purple transition-colors">
                Roblox Parties
              </h3>
              <p class="text-brand-gray text-sm mb-4">
                Explore thousands of Roblox experiences from obbys to roleplaying games in a safe, supervised environment
              </p>
              <div class="flex items-center text-brand-purple font-semibold text-sm">
                Learn More
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </a>
          </div>

          <div class="mt-8 text-center">
            <p class="text-brand-gray text-sm">
              All game-specific parties can be mixed with our <a href="/games" class="text-brand-orange hover:brightness-110 no-underline font-semibold">100+ game library</a> for the ultimate variety experience!
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-12 text-brand-white text-center">
            What's Included
          </h2>
          <div class="grid md:grid-cols-3 gap-8">
            <div class="card text-center">
              <div class="text-brand-orange mb-4">
                <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-3 text-brand-white">Private Party Rooms</h3>
              <p class="text-brand-gray">
                Dedicated private spaces for your group with high-end gaming PCs and comfortable seating
              </p>
            </div>
            <div class="card text-center">
              <div class="text-brand-orange mb-4">
                <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-3 text-brand-white">Flexible Duration</h3>
              <p class="text-brand-gray">
                Book for 2 hours or the entire day - we'll customize the experience to fit your needs
              </p>
            </div>
            <div class="card text-center">
              <div class="text-brand-orange mb-4">
                <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-3 text-brand-white">Food & Beverages</h3>
              <p class="text-brand-gray">
                Full menu available from Strikers with delivery to your party room - from snacks to full meals
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Pricing Overview -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-brand-white text-center">
            Private Party Pricing
          </h2>
          <div class="card">
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6 items-end">
              <div class="bg-brand-gray-dark rounded-lg p-6 text-center border border-brand-purple/30 hover:border-brand-purple transition-colors">
                <div class="text-3xl font-bold text-brand-purple mb-2">$150</div>
                <p class="text-brand-gray text-sm">1 hour</p>
              </div>
              <div class="bg-brand-gray-dark rounded-lg p-8 text-center border-2 border-brand-orange transform md:scale-105 relative">
                <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-brand-orange px-3 py-1 rounded-full">
                  <span class="text-xs font-bold text-brand-black">RECOMMENDED</span>
                </div>
                <div class="text-4xl font-bold text-brand-orange mb-2">$300</div>
                <p class="text-brand-white text-sm font-semibold">2 hours</p>
              </div>
              <div class="bg-brand-gray-dark rounded-lg p-6 text-center border border-brand-cyan/30 hover:border-brand-cyan transition-colors">
                <div class="text-3xl font-bold text-brand-cyan mb-2">$450</div>
                <p class="text-brand-gray text-sm">3 hours</p>
              </div>
              <div class="bg-brand-gray-dark rounded-lg p-6 text-center border border-brand-orange/30 hover:border-brand-orange transition-colors">
                <div class="text-3xl font-bold text-brand-orange mb-2">$500</div>
                <p class="text-brand-gray text-sm">4 hours</p>
              </div>
            </div>
            <p class="text-brand-gray text-center text-sm mb-6">
              All packages include up to 10 players, party room, and staff assistance.
            </p>
            <p class="text-brand-gray text-center mb-6">
              Pricing varies by event type and duration. Contact us for a custom quote tailored to your needs.
            </p>
            <div class="text-center">
              <a href="/contact" class="btn-primary bg-brand-orange-hover hover:bg-brand-orange">
                Get a Custom Quote
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-b from-brand-black to-brand-gray-dark">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <div class="bg-gradient-to-r from-brand-orange/10 via-brand-purple/10 to-brand-cyan/10 rounded-lg p-6 border border-brand-orange/30">
            <div class="flex items-center justify-center mb-4">
              <div class="w-3 h-3 bg-brand-orange rounded-full animate-pulse mr-2"></div>
              <h2 class="text-2xl md:text-3xl font-bold text-brand-white">Ready to Book Your Event?</h2>
            </div>
            <p class="text-brand-gray text-center mb-6">
              Contact us today to discuss your event and get a custom quote
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="/contact" class="btn-primary bg-brand-orange-hover hover:bg-brand-orange">
                Contact Us
              </a>
              <a href="tel:5733381481" class="btn-primary bg-brand-black border-2 border-brand-orange-hover text-brand-orange-hover hover:bg-brand-orange-hover hover:text-brand-white">
                Call (573) 338-1481
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
