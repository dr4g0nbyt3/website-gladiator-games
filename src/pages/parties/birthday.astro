---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout
  title="Gaming Birthday Parties in Jefferson City | Gladiator Games"
  description="Host an unforgettable gaming birthday party at Gladiator Games. Private rooms, unlimited gaming, and catering for kids and teens in Jefferson City, MO."
>
  <Header />
  <main class="bg-brand-black min-h-screen">
    <!-- Hero Section -->
    <section class="py-20 md:py-32 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 text-brand-white">
            Epic Gaming Birthday Parties
          </h1>
          <p class="text-xl md:text-2xl text-brand-gray mb-8">
            Level up your birthday celebration with unlimited gaming, private party rooms, and unforgettable memories
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="btn-primary bg-brand-orange-hover hover:bg-brand-orange">
              Book Your Party
            </a>
            <a href="tel:5733381481" class="btn-primary bg-brand-black border-2 border-brand-orange-hover text-brand-orange-hover hover:bg-brand-orange-hover hover:text-brand-white">
              Call (573) 338-1481
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-12 text-brand-white text-center">
            Why Host Your Birthday Party at Gladiator Games?
          </h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="card text-center">
              <div class="text-brand-orange mb-4">
                <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold mb-2 text-brand-white">Stress-Free</h3>
              <p class="text-brand-gray text-sm">
                We handle setup, entertainment, and cleanup - you just enjoy the party
              </p>
            </div>
            <div class="card text-center">
              <div class="text-brand-orange mb-4">
                <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold mb-2 text-brand-white">All Ages</h3>
              <p class="text-brand-gray text-sm">
                Perfect for kids, teens, and adults with age-appropriate game selections
              </p>
            </div>
            <div class="card text-center">
              <div class="text-brand-orange mb-4">
                <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold mb-2 text-brand-white">Premium Setup</h3>
              <p class="text-brand-gray text-sm">
                Professional gaming PCs, 240Hz monitors, and pro-level peripherals
              </p>
            </div>
            <div class="card text-center">
              <div class="text-brand-orange mb-4">
                <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold mb-2 text-brand-white">Food & Drinks</h3>
              <p class="text-brand-gray text-sm">
                Full catering menu available from Strikers, delivered to your room
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Party Packages -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-12 text-brand-white text-center">
            Birthday Party Pricing
          </h2>

          <div class="card bg-gradient-to-r from-brand-cyan/10 via-brand-orange/10 to-brand-purple/10 border-brand-orange/30 mb-8">
            <h3 class="text-2xl font-bold mb-6 text-brand-white text-center">Private Party Rates</h3>
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
              <div class="bg-brand-black/50 rounded-lg p-4 text-center">
                <div class="text-3xl font-bold text-brand-orange mb-2">$150</div>
                <p class="text-brand-gray text-sm">1 hour</p>
              </div>
              <div class="bg-brand-black/50 rounded-lg p-4 text-center border-2 border-brand-orange">
                <div class="text-3xl font-bold text-brand-orange mb-2">$300</div>
                <p class="text-brand-gray text-sm">2 hours</p>
              </div>
              <div class="bg-brand-black/50 rounded-lg p-4 text-center">
                <div class="text-3xl font-bold text-brand-orange mb-2">$450</div>
                <p class="text-brand-gray text-sm">3 hours</p>
              </div>
              <div class="bg-brand-black/50 rounded-lg p-4 text-center">
                <div class="text-3xl font-bold text-brand-orange mb-2">$500</div>
                <p class="text-brand-gray text-sm">4 hours</p>
              </div>
            </div>
            <ul class="space-y-2 text-brand-gray text-sm">
              <li class="flex items-start">
                <span class="text-brand-orange mr-2">✓</span>
                <span>Up to 10 players with 10 gaming stations</span>
              </li>
              <li class="flex items-start">
                <span class="text-brand-orange mr-2">✓</span>
                <span>Unlimited gaming on 100+ games</span>
              </li>
              <li class="flex items-start">
                <span class="text-brand-orange mr-2">✓</span>
                <span>Party host assistance throughout your event</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Photo Gallery -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-12 text-brand-white text-center">
            Party Gallery
          </h2>
          <div class="grid md:grid-cols-3 gap-6 mb-8">
            <div class="card overflow-hidden group cursor-pointer">
              <img
                src="/images/gallery/parties/party-1.jpg"
                alt="Birthday Party at Gladiator Games"
                class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-300"
              />
            </div>
            <div class="card overflow-hidden group cursor-pointer">
              <img
                src="/images/gallery/parties/party-2.jpg"
                alt="Birthday Party Gaming Setup"
                class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-300"
              />
            </div>
            <div class="card overflow-hidden group cursor-pointer">
              <img
                src="/images/gallery/parties/party-3.jpg"
                alt="Birthday Party Event"
                class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-300"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Other Party Types -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-brand-white text-center">
            Other Party Options
          </h2>
          <div class="grid md:grid-cols-3 gap-6">
            <a href="/parties/bachelor" class="card hover:border-brand-orange transition-colors no-underline">
              <h3 class="text-xl font-bold mb-2 text-brand-white">Bachelor/Bachelorette</h3>
              <p class="text-brand-gray text-sm mb-3">Epic pre-wedding gaming celebration</p>
              <span class="text-brand-orange font-semibold text-sm">Learn More →</span>
            </a>
            <a href="/parties/corporate" class="card hover:border-brand-orange transition-colors no-underline">
              <h3 class="text-xl font-bold mb-2 text-brand-white">Corporate Events</h3>
              <p class="text-brand-gray text-sm mb-3">Team building & company parties</p>
              <span class="text-brand-orange font-semibold text-sm">Learn More →</span>
            </a>
            <a href="/parties/tournaments" class="card hover:border-brand-orange transition-colors no-underline">
              <h3 class="text-xl font-bold mb-2 text-brand-white">Tournament Hosting</h3>
              <p class="text-brand-gray text-sm mb-3">Host your own esports tournament</p>
              <span class="text-brand-orange font-semibold text-sm">Learn More →</span>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold mb-12 text-brand-white text-center">
            Birthday Party FAQ
          </h2>
          <div class="space-y-4">
            <details class="card group">
              <summary class="font-bold text-brand-white cursor-pointer flex items-center justify-between">
                What ages are birthday parties suitable for?
                <svg class="w-5 h-5 text-brand-orange group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </summary>
              <p class="text-brand-gray mt-3">
                Our birthday parties are perfect for kids ages 6 and up, teens, and even adults! We can customize the game selection and party atmosphere to match the age group and preferences of the birthday person.
              </p>
            </details>

            <details class="card group">
              <summary class="font-bold text-brand-white cursor-pointer flex items-center justify-between">
                How far in advance should I book?
                <svg class="w-5 h-5 text-brand-orange group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </summary>
              <p class="text-brand-gray mt-3">
                We recommend booking at least 2-3 weeks in advance, especially for weekend parties. However, we can sometimes accommodate last-minute bookings - just give us a call at (573) 338-1481 to check availability.
              </p>
            </details>

            <details class="card group">
              <summary class="font-bold text-brand-white cursor-pointer flex items-center justify-between">
                Can we bring our own food and decorations?
                <svg class="w-5 h-5 text-brand-orange group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </summary>
              <p class="text-brand-gray mt-3">
                Yes! You're welcome to bring your own cake, decorations, and party favors. We provide basic decorations, but feel free to personalize the space. For food, you can either bring your own or order from our catering menu through Strikers.
              </p>
            </details>

            <details class="card group">
              <summary class="font-bold text-brand-white cursor-pointer flex items-center justify-between">
                What happens if we go over our time?
                <svg class="w-5 h-5 text-brand-orange group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </summary>
              <p class="text-brand-gray mt-3">
                Additional time can be added to your party for $75/hour (Basic) or $150/hour (Premium), subject to availability. We'll give you a heads up when you're approaching your time limit so you can decide if you'd like to extend.
              </p>
            </details>

            <details class="card group">
              <summary class="font-bold text-brand-white cursor-pointer flex items-center justify-between">
                Do parents need to stay during the party?
                <svg class="w-5 h-5 text-brand-orange group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </summary>
              <p class="text-brand-gray mt-3">
                At least one adult must stay on-site during the party. Parents are welcome in the party room or can relax in Strikers' restaurant and bar area while our staff supervises the gaming.
              </p>
            </details>

            <details class="card group">
              <summary class="font-bold text-brand-white cursor-pointer flex items-center justify-between">
                What games can we play at the party?
                <svg class="w-5 h-5 text-brand-orange group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </summary>
              <p class="text-brand-gray mt-3">
                We have 100+ games available! Popular party choices include Fortnite, Minecraft, Rocket League, Super Smash Bros, Roblox, and Among Us. We can set up specific games ahead of time or let the kids choose when they arrive.
              </p>
            </details>

            <details class="card group">
              <summary class="font-bold text-brand-white cursor-pointer flex items-center justify-between">
                What's your cancellation policy?
                <svg class="w-5 h-5 text-brand-orange group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </summary>
              <p class="text-brand-gray mt-3">
                We require 48 hours notice for cancellations to receive a full refund. Cancellations with less than 48 hours notice will forfeit the deposit. We understand emergencies happen - just contact us as soon as possible.
              </p>
            </details>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-b from-brand-black to-brand-gray-dark">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <div class="bg-gradient-to-r from-brand-orange/10 via-brand-purple/10 to-brand-cyan/10 rounded-lg p-6 border border-brand-orange/30">
            <div class="flex items-center justify-center mb-4">
              <div class="w-3 h-3 bg-brand-orange rounded-full animate-pulse mr-2"></div>
              <h2 class="text-2xl md:text-3xl font-bold text-brand-white">Ready to Book Your Birthday Party?</h2>
            </div>
            <p class="text-brand-gray text-center mb-6">
              Contact us today to reserve your date and customize your perfect party package
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="/contact" class="btn-primary bg-brand-orange-hover hover:bg-brand-orange">
                Book Your Party
              </a>
              <a href="tel:5733381481" class="btn-primary bg-brand-black border-2 border-brand-orange-hover text-brand-orange-hover hover:bg-brand-orange-hover hover:text-brand-white">
                Call (573) 338-1481
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
