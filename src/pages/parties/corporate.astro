    <!-- Event Types -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-12 text-brand-white text-center">
            Perfect For
          </h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="card">
              <h3 class="text-xl font-bold text-brand-white mb-2">Team Building Events</h3>
              <p class="text-brand-gray text-sm">
                Build stronger teams through collaborative gaming challenges and friendly competition
              </p>
            </div>
            <div class="card">
              <h3 class="text-xl font-bold text-brand-white mb-2">Holiday Parties</h3>
              <p class="text-brand-gray text-sm">
                Celebrate the season with your team in a fun, relaxed gaming environment
              </p>
            </div>
            <div class="card">
              <h3 class="text-xl font-bold text-brand-white mb-2">Client Entertainment</h3>
