---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout
  title="Fortnite Birthday Parties - Gladiator Games"
  description="Host an epic Fortnite birthday party at Gladiator Games. Squad up, battle royale action, and professional gaming setups for the ultimate Victory Royale celebration."
>
  <Header />
  <main class="bg-brand-black min-h-screen">
    <section class="py-20 md:py-32 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 text-brand-white">Fortnite Parties</h1>
          <p class="text-xl text-brand-gray mb-8">Squad up for the ultimate Victory Royale celebration</p>
        </div>
      </div>
    </section>

    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-brand-white text-center">What's Included</h2>
          <div class="grid md:grid-cols-3 gap-6 mb-12">
            <div class="card">
              <div class="w-12 h-12 bg-brand-purple/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">Squad Gameplay</h3>
              <p class="text-brand-gray text-sm">Form squads and compete in Battle Royale together</p>
            </div>
            <div class="card">
              <div class="w-12 h-12 bg-brand-orange/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">High FPS Gaming</h3>
              <p class="text-brand-gray text-sm">144+ FPS for smooth competitive gameplay</p>
            </div>
            <div class="card">
              <div class="w-12 h-12 bg-brand-cyan/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">2-3 Hour Sessions</h3>
              <p class="text-brand-gray text-sm">Plenty of time for multiple Victory Royales</p>
            </div>
          </div>

          <div class="card bg-gradient-to-r from-brand-purple/10 via-brand-orange/10 to-brand-cyan/10 border-brand-purple/30">
            <h3 class="text-2xl font-bold mb-4 text-brand-white">Fortnite Party Activities</h3>
            <div class="grid md:grid-cols-2 gap-6">
              <ul class="space-y-3 text-brand-gray">
                <li class="flex items-start"><span class="text-brand-purple mr-2">•</span><span>Battle Royale squad matches</span></li>
                <li class="flex items-start"><span class="text-brand-purple mr-2">•</span><span>Creative mode mini-games</span></li>
                <li class="flex items-start"><span class="text-brand-purple mr-2">•</span><span>Build battles and 1v1 tournaments</span></li>
                <li class="flex items-start"><span class="text-brand-purple mr-2">•</span><span>Team deathmatch modes</span></li>
              </ul>
              <ul class="space-y-3 text-brand-gray">
                <li class="flex items-start"><span class="text-brand-purple mr-2">•</span><span>Custom island codes available</span></li>
                <li class="flex items-start"><span class="text-brand-purple mr-2">•</span><span>Zone wars practice</span></li>
                <li class="flex items-start"><span class="text-brand-purple mr-2">•</span><span>Edit course competitions</span></li>
                <li class="flex items-start"><span class="text-brand-purple mr-2">•</span><span>Victory Royale challenges</span></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-brand-white text-center">Party Pricing</h2>

          <div class="card bg-gradient-to-r from-brand-purple/10 via-brand-orange/10 to-brand-cyan/10 border-brand-purple/30 mb-8">
            <h3 class="text-2xl font-bold mb-6 text-brand-white text-center">Private Party Rates</h3>
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
              <div class="bg-brand-black/50 rounded-lg p-4 text-center">
                <div class="text-3xl font-bold text-brand-purple mb-2">$150</div>
                <p class="text-brand-gray text-sm">1 hour</p>
              </div>
              <div class="bg-brand-black/50 rounded-lg p-4 text-center border-2 border-brand-purple">
                <div class="text-3xl font-bold text-brand-purple mb-2">$300</div>
                <p class="text-brand-gray text-sm">2 hours</p>
              </div>
              <div class="bg-brand-black/50 rounded-lg p-4 text-center">
                <div class="text-3xl font-bold text-brand-purple mb-2">$450</div>
                <p class="text-brand-gray text-sm">3 hours</p>
              </div>
              <div class="bg-brand-black/50 rounded-lg p-4 text-center">
                <div class="text-3xl font-bold text-brand-purple mb-2">$500</div>
                <p class="text-brand-gray text-sm">4 hours</p>
              </div>
            </div>
            <ul class="space-y-2 text-brand-gray text-sm mb-6">
              <li class="flex items-start">
                <span class="text-brand-purple mr-2">✓</span>
                <span>Up to 10 players with 10 gaming stations</span>
              </li>
              <li class="flex items-start">
                <span class="text-brand-purple mr-2">✓</span>
                <span>144+ FPS for smooth competitive gameplay</span>
              </li>
              <li class="flex items-start">
                <span class="text-brand-purple mr-2">✓</span>
                <span>Staff assistance throughout your party</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Photo Gallery -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-12 text-brand-white text-center">
            Recent Fortnite Parties
          </h2>
          <div class="grid md:grid-cols-3 gap-6 mb-8">
            <div class="card overflow-hidden group cursor-pointer">
              <img
                src="/images/gallery/parties/party-1.webp"
                alt="Birthday Party at Gladiator Games"
                class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-300"
              />
            </div>
            <div class="card overflow-hidden group cursor-pointer">
              <img
                src="/images/gallery/parties/party-2.webp"
                alt="Birthday Party Gaming Setup"
                class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-300"
              />
            </div>
            <div class="card overflow-hidden group cursor-pointer">
              <img
                src="/images/gallery/parties/party-3.webp"
                alt="Birthday Party Event"
                class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-300"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <div class="card bg-gradient-to-r from-brand-purple/10 via-brand-orange/10 to-brand-cyan/10 border-brand-purple/30">
            <h2 class="text-3xl font-bold mb-6 text-brand-white text-center">Want to Play More Games?</h2>
            <p class="text-brand-gray text-center mb-6">
              Mix Fortnite with other popular games like Minecraft, Roblox, Rocket League, and more!
              With access to <a href="/games" class="text-brand-orange hover:brightness-110 no-underline font-semibold">100+ games</a>,
              your guests can enjoy variety throughout the party.
            </p>
            <div class="text-center">
              <a href="/parties" class="btn-primary bg-brand-purple hover:brightness-110">View All Party Options</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 bg-gradient-to-b from-brand-black to-brand-gray-dark">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-6 text-brand-white">Ready to Book Your Fortnite Party?</h2>
          <p class="text-xl text-brand-gray mb-8">Contact us today to reserve your date and start planning an epic Victory Royale celebration</p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="btn-primary bg-brand-purple hover:brightness-110">Book Your Party</a>
            <a href="tel:5733381481" class="btn-primary bg-brand-orange hover:brightness-110">Call (573) 338-1481</a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
