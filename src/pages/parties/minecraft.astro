---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout
  title="Minecraft Birthday Parties - Gladiator Games"
  description="Host an epic Minecraft birthday party at Gladiator Games in Jefferson City. Private server, multiplayer fun, and professional gaming equipment for an unforgettable celebration."
>
  <Header />
  <main class="bg-brand-black min-h-screen">
    <!-- Hero Section -->
    <section class="py-20 md:py-32 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 text-brand-white">
            Minecraft Parties
          </h1>
          <p class="text-xl text-brand-gray mb-8">
            Build, explore, and celebrate together on our private Minecraft server
          </p>
        </div>
      </div>
    </section>

    <!-- Party Features -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-brand-white text-center">What's Included</h2>

          <div class="grid md:grid-cols-3 gap-6 mb-12">
            <div class="card">
              <div class="w-12 h-12 bg-brand-orange/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">Private Server</h3>
              <p class="text-brand-gray text-sm">
                Dedicated Minecraft server for your party with custom world settings
              </p>
            </div>

            <div class="card">
              <div class="w-12 h-12 bg-brand-purple/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">Up to 15 Players</h3>
              <p class="text-brand-gray text-sm">
                All friends play together on professional gaming PCs
              </p>
            </div>

            <div class="card">
              <div class="w-12 h-12 bg-brand-cyan/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">2 Hour Session</h3>
              <p class="text-brand-gray text-sm">
                Perfect amount of time for building, exploring, and fun
              </p>
            </div>
          </div>

          <div class="card bg-gradient-to-r from-brand-orange/10 via-brand-purple/10 to-brand-cyan/10 border-brand-orange/30">
            <h3 class="text-2xl font-bold mb-4 text-brand-white">Minecraft Party Activities</h3>
            <div class="grid md:grid-cols-2 gap-6">
              <ul class="space-y-3 text-brand-gray">
                <li class="flex items-start">
                  <span class="text-brand-orange mr-2">•</span>
                  <span>Build epic structures together</span>
                </li>
                <li class="flex items-start">
                  <span class="text-brand-orange mr-2">•</span>
                  <span>Survival mode adventures</span>
                </li>
                <li class="flex items-start">
                  <span class="text-brand-orange mr-2">•</span>
                  <span>Creative mode building competitions</span>
                </li>
                <li class="flex items-start">
                  <span class="text-brand-orange mr-2">•</span>
                  <span>Explore custom adventure maps</span>
                </li>
              </ul>
              <ul class="space-y-3 text-brand-gray">
                <li class="flex items-start">
                  <span class="text-brand-orange mr-2">•</span>
                  <span>Team challenges and mini-games</span>
                </li>
                <li class="flex items-start">
                  <span class="text-brand-orange mr-2">•</span>
                  <span>PvP battle arenas (optional)</span>
                </li>
                <li class="flex items-start">
                  <span class="text-brand-orange mr-2">•</span>
                  <span>Resource gathering competitions</span>
                </li>
                <li class="flex items-start">
                  <span class="text-brand-orange mr-2">•</span>
                  <span>Custom world seeds available</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Pricing -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-brand-white text-center">Party Pricing</h2>

          <div class="card bg-gradient-to-r from-brand-orange/10 via-brand-purple/10 to-brand-cyan/10 border-brand-orange/30 mb-8">
            <h3 class="text-2xl font-bold mb-6 text-brand-white text-center">Private Party Rates</h3>
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
              <div class="bg-brand-black/50 rounded-lg p-4 text-center">
                <div class="text-3xl font-bold text-brand-orange mb-2">$150</div>
                <p class="text-brand-gray text-sm">1 hour</p>
              </div>
              <div class="bg-brand-black/50 rounded-lg p-4 text-center border-2 border-brand-orange">
                <div class="text-3xl font-bold text-brand-orange mb-2">$300</div>
                <p class="text-brand-gray text-sm">2 hours</p>
              </div>
              <div class="bg-brand-black/50 rounded-lg p-4 text-center">
                <div class="text-3xl font-bold text-brand-orange mb-2">$450</div>
                <p class="text-brand-gray text-sm">3 hours</p>
              </div>
              <div class="bg-brand-black/50 rounded-lg p-4 text-center">
                <div class="text-3xl font-bold text-brand-orange mb-2">$500</div>
                <p class="text-brand-gray text-sm">4 hours</p>
              </div>
            </div>
            <ul class="space-y-2 text-brand-gray text-sm mb-6">
              <li class="flex items-start">
                <span class="text-brand-orange mr-2">✓</span>
                <span>Up to 10 players with 10 gaming stations</span>
              </li>
              <li class="flex items-start">
                <span class="text-brand-orange mr-2">✓</span>
                <span>Private Minecraft server with custom worlds</span>
              </li>
              <li class="flex items-start">
                <span class="text-brand-orange mr-2">✓</span>
                <span>Staff assistance throughout your party</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Photo Gallery -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-12 text-brand-white text-center">
            Recent Minecraft Parties
          </h2>
          <div class="grid md:grid-cols-3 gap-6 mb-8">
            <div class="card overflow-hidden group cursor-pointer">
              <img
                src="/images/gallery/parties/party-1.jpg"
                alt="Birthday Party at Gladiator Games"
                class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-300"
              />
            </div>
            <div class="card overflow-hidden group cursor-pointer">
              <img
                src="/images/gallery/parties/party-2.jpg"
                alt="Birthday Party Gaming Setup"
                class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-300"
              />
            </div>
            <div class="card overflow-hidden group cursor-pointer">
              <img
                src="/images/gallery/parties/party-3.jpg"
                alt="Birthday Party Event"
                class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-300"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-brand-white text-center">Why Host at Gladiator Games?</h2>

          <div class="grid md:grid-cols-3 gap-6">
            <div class="card text-center">
              <div class="text-brand-orange mb-4">
                <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-3 text-brand-white">Pro Equipment</h3>
              <p class="text-brand-gray">
                High-end gaming PCs with great performance for smooth Minecraft gameplay
              </p>
            </div>

            <div class="card text-center">
              <div class="text-brand-orange mb-4">
                <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-3 text-brand-white">Hassle-Free</h3>
              <p class="text-brand-gray">
                No setup, no cleanup - we handle everything so you can enjoy the party
              </p>
            </div>

            <div class="card text-center">
              <div class="text-brand-orange mb-4">
                <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-3 text-brand-white">Expert Staff</h3>
              <p class="text-brand-gray">
                Friendly staff to help with technical issues and keep everyone entertained
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Multi-Game Option -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <div class="card bg-gradient-to-r from-brand-orange/10 via-brand-purple/10 to-brand-cyan/10 border-brand-orange/30">
            <h2 class="text-3xl font-bold mb-6 text-brand-white text-center">Want to Play More Games?</h2>
            <p class="text-brand-gray text-center mb-6">
              Combine Minecraft with other popular games like Fortnite, Roblox, Among Us, and more!
              With access to <a href="/games" class="text-brand-orange hover:brightness-110 no-underline font-semibold">100+ games</a>,
              your guests can enjoy variety throughout the party.
            </p>
            <div class="text-center">
              <a href="/parties" class="btn-primary bg-brand-orange hover:brightness-110">
                View All Party Options
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-16 bg-gradient-to-b from-brand-black to-brand-gray-dark">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-6 text-brand-white">
            Ready to Book Your Minecraft Party?
          </h2>
          <p class="text-xl text-brand-gray mb-8">
            Contact us today to reserve your date and start planning an unforgettable celebration
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="btn-primary bg-brand-orange hover:brightness-110">
              Book Your Party
            </a>
            <a href="tel:5733381481" class="btn-primary bg-brand-purple hover:brightness-110">
              Call (573) 338-1481
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
