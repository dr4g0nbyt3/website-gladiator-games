---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Partners - Gladiator Games"
  description="Our partners and sponsors who help make Gladiator Games the best gaming center in Jefferson City, Missouri."
>
  <Header />
  <main class="bg-brand-black min-h-screen">
    <!-- Hero Section -->
    <section class="py-20 md:py-32 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 text-brand-white">
            Our Partners
          </h1>
          <p class="text-xl text-brand-gray mb-8">
            We work with industry leaders to bring you the best gaming experience possible
          </p>
        </div>
      </div>
    </section>

    <!-- Featured Partners -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-brand-white text-center">Featured Partners</h2>

          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
            <!-- Toxic Tournaments -->
            <a href="https://toxictournaments.com/" target="_blank" rel="noopener noreferrer" class="card text-center hover:border-brand-purple transition-colors no-underline">
              <div class="w-full h-32 bg-brand-gray-dark rounded-lg flex items-center justify-center mb-4 p-4">
                <img src="/images/partners/toxic-tournaments.png" alt="Toxic Tournaments" class="w-full h-full object-contain" />
              </div>
              <h3 class="text-xl font-bold text-brand-white mb-2">Toxic Tournaments</h3>
              <p class="text-brand-gray text-sm">
                Professional esports tournament organization and gaming events
              </p>
            </a>

            <!-- League of Honorable Players -->
            <div class="card text-center">
              <div class="w-full h-32 bg-brand-gray-dark rounded-lg flex items-center justify-center mb-4 p-4">
                <img src="/images/partners/league-of-her-own.png" alt="League of Honorable Players" class="w-full h-full object-contain" />
              </div>
              <h3 class="text-xl font-bold text-brand-white mb-2">League of Honorable Players</h3>
              <p class="text-brand-gray text-sm">
                eSports team created for honor
              </p>
            </div>

            <!-- Sports Crusaders -->
            <a href="https://sportscrusaders.org/" target="_blank" rel="noopener noreferrer" class="card text-center hover:border-brand-purple transition-colors no-underline">
              <div class="w-full h-32 bg-brand-gray-dark rounded-lg flex items-center justify-center mb-4 p-4">
                <img src="/images/partners/sports-crusaders.png" alt="Sports Crusaders" class="w-full h-full object-contain" />
              </div>
              <h3 class="text-xl font-bold text-brand-white mb-2">Sports Crusaders</h3>
              <p class="text-brand-gray text-sm">
                Youth sports and community development organization
              </p>
            </a>

            <!-- Strikers -->
            <a href="https://www.strikersjc.com" target="_blank" rel="noopener noreferrer" class="card text-center hover:border-brand-purple transition-colors no-underline">
              <div class="w-full h-32 bg-brand-gray-dark rounded-lg flex items-center justify-center mb-4 p-4">
                <img src="/images/partners/strikers.webp" alt="Strikers" class="w-full h-full object-contain" />
              </div>
              <h3 class="text-xl font-bold text-brand-white mb-2">Strikers JC</h3>
              <p class="text-brand-gray text-sm">
                Jefferson City's premier sports and recreation facility
              </p>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Partnership Benefits -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-brand-white text-center">Why Partner With Us?</h2>

          <div class="grid md:grid-cols-2 gap-6">
            <div class="card">
              <div class="w-12 h-12 bg-brand-orange/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">Active Gaming Community</h3>
              <p class="text-brand-gray">
                Connect with hundreds of dedicated gamers who visit our facility regularly for gaming sessions and tournaments.
              </p>
            </div>

            <div class="card">
              <div class="w-12 h-12 bg-brand-purple/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">Brand Visibility</h3>
              <p class="text-brand-gray">
                Showcase your brand through in-facility displays, streaming partnerships, and tournament sponsorships.
              </p>
            </div>

            <div class="card">
              <div class="w-12 h-12 bg-brand-cyan/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">Event Sponsorships</h3>
              <p class="text-brand-gray">
                Support <a href="/events" class="text-brand-orange hover:brightness-110 no-underline font-semibold">weekly tournaments, LAN parties, and special events</a> with your brand front and center.
              </p>
            </div>

            <div class="card">
              <div class="w-12 h-12 bg-brand-orange/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 text-brand-white">Marketing Opportunities</h3>
              <p class="text-brand-gray">
                Leverage our social media presence, streaming channels, and community outreach for targeted marketing.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Partnership Tiers -->
    <section class="py-16 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-brand-white text-center">Partnership Opportunities</h2>

          <div class="grid md:grid-cols-3 gap-6">
            <div class="card border-2 border-brand-cyan">
              <h3 class="text-2xl font-bold text-brand-white mb-4">Bronze Partner</h3>
              <ul class="space-y-3 text-brand-gray mb-6">
                <li class="flex items-start">
                  <span class="text-brand-cyan mr-2">✓</span>
                  <span>Logo on website</span>
                </li>
                <li class="flex items-start">
                  <span class="text-brand-cyan mr-2">✓</span>
                  <span>Social media mentions</span>
                </li>
                <li class="flex items-start">
                  <span class="text-brand-cyan mr-2">✓</span>
                  <span>In-facility signage</span>
                </li>
              </ul>
              <a href="/#contact" class="btn-primary bg-brand-cyan hover:brightness-110 w-full text-center">
                Learn More
              </a>
            </div>

            <div class="card border-2 border-brand-orange transform md:scale-105">
              <div class="absolute top-0 right-0 bg-brand-orange text-brand-white text-xs font-bold px-3 py-1 rounded-bl-lg">
                POPULAR
              </div>
              <h3 class="text-2xl font-bold text-brand-white mb-4">Silver Partner</h3>
              <ul class="space-y-3 text-brand-gray mb-6">
                <li class="flex items-start">
                  <span class="text-brand-orange mr-2">✓</span>
                  <span>Everything in Bronze</span>
                </li>
                <li class="flex items-start">
                  <span class="text-brand-orange mr-2">✓</span>
                  <span><a href="/events" class="text-brand-orange hover:brightness-110 no-underline font-semibold">Tournament sponsorship</a></span>
                </li>
                <li class="flex items-start">
                  <span class="text-brand-orange mr-2">✓</span>
                  <span>Promotional giveaways</span>
                </li>
                <li class="flex items-start">
                  <span class="text-brand-orange mr-2">✓</span>
                  <span>Stream overlay placement</span>
                </li>
              </ul>
              <a href="/#contact" class="btn-primary bg-brand-orange hover:brightness-110 w-full text-center">
                Learn More
              </a>
            </div>

            <div class="card border-2 border-brand-purple">
              <h3 class="text-2xl font-bold text-brand-white mb-4">Gold Partner</h3>
              <ul class="space-y-3 text-brand-gray mb-6">
                <li class="flex items-start">
                  <span class="text-brand-purple mr-2">✓</span>
                  <span>Everything in Silver</span>
                </li>
                <li class="flex items-start">
                  <span class="text-brand-purple mr-2">✓</span>
                  <span>Exclusive events</span>
                </li>
                <li class="flex items-start">
                  <span class="text-brand-purple mr-2">✓</span>
                  <span>Product demonstrations</span>
                </li>
                <li class="flex items-start">
                  <span class="text-brand-purple mr-2">✓</span>
                  <span>Custom marketing campaigns</span>
                </li>
              </ul>
              <a href="/#contact" class="btn-primary bg-brand-purple hover:brightness-110 w-full text-center">
                Learn More
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-16 bg-gradient-to-b from-brand-black to-brand-gray-dark">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-6 text-brand-white">
            Interested in Partnering With Us?
          </h2>
          <p class="text-xl text-brand-gray mb-8">
            Let's discuss how we can work together to grow the gaming community in Jefferson City
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/#contact" class="btn-primary bg-brand-orange-hover hover:bg-brand-orange">
              Contact Us
            </a>
            <a href="tel:5733381481" class="btn-primary bg-brand-black border-2 border-brand-orange-hover text-brand-orange-hover hover:bg-brand-orange-hover hover:text-brand-white">
              Call (573) 338-1481
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
