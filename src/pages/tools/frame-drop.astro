---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout
  title="Frame Drop Detective - Gladiator Games"
  description="Find out why your games are lagging. Get specific hardware upgrade recommendations and optimization tips to boost FPS."
>
  <Header />
  <main>
    <!--Hero Section -->
    <section class="py-16 md:py-24 bg-brand-black">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-8">
            <a href="/tools" class="text-brand-orange hover:brightness-110 inline-flex items-center mb-4">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
              Back to Tools
            </a>
            <h1 class="text-4xl md:text-5xl font-bold mb-4 text-brand-white">
              Frame Drop Detective
            </h1>
            <p class="text-brand-gray text-lg">
              Diagnose performance issues and get personalized optimization tips
            </p>
          </div>

          <!-- System Information -->
          <div class="card mb-8">
            <h2 class="text-2xl font-bold mb-6 text-brand-white">Your System</h2>
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label class="block text-brand-white text-xs font-semibold uppercase tracking-wider mb-3">GPU (Graphics Card)</label>
                <select id="gpu" class="w-full appearance-none bg-gradient-to-br from-brand-gray-dark to-brand-black border border-brand-gray/30 hover:border-brand-orange text-gray-200 px-5 py-4 rounded-xl shadow-lg shadow-black/20 focus:outline-none focus:ring-2 focus:ring-brand-orange/50 focus:border-brand-orange transition-all duration-300 cursor-pointer text-base font-medium backdrop-blur-sm" style="background-image: url('data:image/svg+xml;charset=UTF-8,%3csvg xmlns=%27http://www.w3.org/2000/svg%27 viewBox=%270 0 24 24%27 fill=%27none%27 stroke=%27%23ff6900%27 stroke-width=%272%27 stroke-linecap=%27round%27 stroke-linejoin=%27round%27%3e%3cpolyline points=%276 9 12 15 18 9%27%3e%3c/polyline%3e%3c/svg%3e'); background-repeat: no-repeat; background-position: right 1rem center; background-size: 1.25em; padding-right: 3rem; color-scheme: dark;">
                  <option value="">Select GPU...</option>
                  <optgroup label="NVIDIA RTX 40 Series">
                    <option value="rtx4090">RTX 4090</option>
                    <option value="rtx4080">RTX 4080</option>
                    <option value="rtx4070ti">RTX 4070 Ti</option>
                    <option value="rtx4070">RTX 4070</option>
                    <option value="rtx4060ti">RTX 4060 Ti</option>
                    <option value="rtx4060">RTX 4060</option>
                  </optgroup>
                  <optgroup label="NVIDIA RTX 30 Series">
                    <option value="rtx3090">RTX 3090</option>
                    <option value="rtx3080">RTX 3080</option>
                    <option value="rtx3070">RTX 3070</option>
                    <option value="rtx3060ti">RTX 3060 Ti</option>
                    <option value="rtx3060">RTX 3060</option>
                    <option value="rtx3050">RTX 3050</option>
                  </optgroup>
                  <optgroup label="NVIDIA GTX Series">
                    <option value="gtx1660">GTX 1660</option>
                    <option value="gtx1650">GTX 1650</option>
                    <option value="gtx1080">GTX 1080</option>
                  </optgroup>
                  <optgroup label="AMD Radeon">
                    <option value="rx7900xtx">RX 7900 XTX</option>
                    <option value="rx7900xt">RX 7900 XT</option>
                    <option value="rx7800xt">RX 7800 XT</option>
                    <option value="rx7600">RX 7600</option>
                    <option value="rx6800xt">RX 6800 XT</option>
                    <option value="rx6700xt">RX 6700 XT</option>
                    <option value="rx6600">RX 6600</option>
                  </optgroup>
                </select>
              </div>

              <div>
                <label class="block text-brand-white text-xs font-semibold uppercase tracking-wider mb-3">CPU (Processor)</label>
                <select id="cpu" class="w-full appearance-none bg-gradient-to-br from-brand-gray-dark to-brand-black border border-brand-gray/30 hover:border-brand-orange text-gray-200 px-5 py-4 rounded-xl shadow-lg shadow-black/20 focus:outline-none focus:ring-2 focus:ring-brand-orange/50 focus:border-brand-orange transition-all duration-300 cursor-pointer text-base font-medium backdrop-blur-sm" style="background-image: url('data:image/svg+xml;charset=UTF-8,%3csvg xmlns=%27http://www.w3.org/2000/svg%27 viewBox=%270 0 24 24%27 fill=%27none%27 stroke=%27%23ff6900%27 stroke-width=%272%27 stroke-linecap=%27round%27 stroke-linejoin=%27round%27%3e%3cpolyline points=%276 9 12 15 18 9%27%3e%3c/polyline%3e%3c/svg%3e'); background-repeat: no-repeat; background-position: right 1rem center; background-size: 1.25em; padding-right: 3rem; color-scheme: dark;">
                  <option value="">Select CPU...</option>
                  <optgroup label="Intel 14th Gen">
                    <option value="i9-14900k">i9-14900K</option>
                    <option value="i7-14700k">i7-14700K</option>
                    <option value="i5-14600k">i5-14600K</option>
                  </optgroup>
                  <optgroup label="Intel 13th Gen">
                    <option value="i9-13900k">i9-13900K</option>
                    <option value="i7-13700k">i7-13700K</option>
                    <option value="i5-13600k">i5-13600K</option>
                  </optgroup>
                  <optgroup label="Intel 12th Gen">
                    <option value="i9-12900k">i9-12900K</option>
                    <option value="i7-12700k">i7-12700K</option>
                    <option value="i5-12600k">i5-12600K</option>
                    <option value="i5-12400">i5-12400</option>
                  </optgroup>
                  <optgroup label="AMD Ryzen 7000">
                    <option value="r9-7950x">Ryzen 9 7950X</option>
                    <option value="r9-7900x">Ryzen 9 7900X</option>
                    <option value="r7-7700x">Ryzen 7 7700X</option>
                    <option value="r5-7600x">Ryzen 5 7600X</option>
                  </optgroup>
                  <optgroup label="AMD Ryzen 5000">
                    <option value="r9-5950x">Ryzen 9 5950X</option>
                    <option value="r9-5900x">Ryzen 9 5900X</option>
                    <option value="r7-5800x">Ryzen 7 5800X</option>
                    <option value="r5-5600x">Ryzen 5 5600X</option>
                  </optgroup>
                </select>
              </div>

              <div>
                <label class="block text-brand-white text-xs font-semibold uppercase tracking-wider mb-3">RAM (Memory)</label>
                <select id="ram" class="w-full appearance-none bg-gradient-to-br from-brand-gray-dark to-brand-black border border-brand-gray/30 hover:border-brand-orange text-gray-200 px-5 py-4 rounded-xl shadow-lg shadow-black/20 focus:outline-none focus:ring-2 focus:ring-brand-orange/50 focus:border-brand-orange transition-all duration-300 cursor-pointer text-base font-medium backdrop-blur-sm" style="background-image: url('data:image/svg+xml;charset=UTF-8,%3csvg xmlns=%27http://www.w3.org/2000/svg%27 viewBox=%270 0 24 24%27 fill=%27none%27 stroke=%27%23ff6900%27 stroke-width=%272%27 stroke-linecap=%27round%27 stroke-linejoin=%27round%27%3e%3cpolyline points=%276 9 12 15 18 9%27%3e%3c/polyline%3e%3c/svg%3e'); background-repeat: no-repeat; background-position: right 1rem center; background-size: 1.25em; padding-right: 3rem; color-scheme: dark;">
                  <option value="8">8 GB</option>
                  <option value="16" selected>16 GB</option>
                  <option value="32">32 GB</option>
                  <option value="64">64 GB</option>
                </select>
              </div>

              <div>
                <label class="block text-brand-white text-xs font-semibold uppercase tracking-wider mb-3">Monitor Resolution</label>
                <select id="resolution" class="w-full appearance-none bg-gradient-to-br from-brand-gray-dark to-brand-black border border-brand-gray/30 hover:border-brand-orange text-gray-200 px-5 py-4 rounded-xl shadow-lg shadow-black/20 focus:outline-none focus:ring-2 focus:ring-brand-orange/50 focus:border-brand-orange transition-all duration-300 cursor-pointer text-base font-medium backdrop-blur-sm" style="background-image: url('data:image/svg+xml;charset=UTF-8,%3csvg xmlns=%27http://www.w3.org/2000/svg%27 viewBox=%270 0 24 24%27 fill=%27none%27 stroke=%27%23ff6900%27 stroke-width=%272%27 stroke-linecap=%27round%27 stroke-linejoin=%27round%27%3e%3cpolyline points=%276 9 12 15 18 9%27%3e%3c/polyline%3e%3c/svg%3e'); background-repeat: no-repeat; background-position: right 1rem center; background-size: 1.25em; padding-right: 3rem; color-scheme: dark;">
                  <option value="1080p" selected>1920x1080 (1080p)</option>
                  <option value="1440p">2560x1440 (1440p)</option>
                  <option value="4k">3840x2160 (4K)</option>
                </select>
              </div>

              <div>
                <label class="block text-brand-white text-xs font-semibold uppercase tracking-wider mb-3">Target FPS</label>
                <select id="target-fps" class="w-full appearance-none bg-gradient-to-br from-brand-gray-dark to-brand-black border border-brand-gray/30 hover:border-brand-orange text-gray-200 px-5 py-4 rounded-xl shadow-lg shadow-black/20 focus:outline-none focus:ring-2 focus:ring-brand-orange/50 focus:border-brand-orange transition-all duration-300 cursor-pointer text-base font-medium backdrop-blur-sm" style="background-image: url('data:image/svg+xml;charset=UTF-8,%3csvg xmlns=%27http://www.w3.org/2000/svg%27 viewBox=%270 0 24 24%27 fill=%27none%27 stroke=%27%23ff6900%27 stroke-width=%272%27 stroke-linecap=%27round%27 stroke-linejoin=%27round%27%3e%3cpolyline points=%276 9 12 15 18 9%27%3e%3c/polyline%3e%3c/svg%3e'); background-repeat: no-repeat; background-position: right 1rem center; background-size: 1.25em; padding-right: 3rem; color-scheme: dark;">
                  <option value="60">60 FPS</option>
                  <option value="144" selected>144 FPS</option>
                  <option value="240">240 FPS</option>
                  <option value="360">360 FPS</option>
                </select>
              </div>

              <div>
                <label class="block text-brand-white text-xs font-semibold uppercase tracking-wider mb-3">Primary Game</label>
                <select id="game" class="w-full appearance-none bg-gradient-to-br from-brand-gray-dark to-brand-black border border-brand-gray/30 hover:border-brand-orange text-gray-200 px-5 py-4 rounded-xl shadow-lg shadow-black/20 focus:outline-none focus:ring-2 focus:ring-brand-orange/50 focus:border-brand-orange transition-all duration-300 cursor-pointer text-base font-medium backdrop-blur-sm" style="background-image: url('data:image/svg+xml;charset=UTF-8,%3csvg xmlns=%27http://www.w3.org/2000/svg%27 viewBox=%270 0 24 24%27 fill=%27none%27 stroke=%27%23ff6900%27 stroke-width=%272%27 stroke-linecap=%27round%27 stroke-linejoin=%27round%27%3e%3cpolyline points=%276 9 12 15 18 9%27%3e%3c/polyline%3e%3c/svg%3e'); background-repeat: no-repeat; background-position: right 1rem center; background-size: 1.25em; padding-right: 3rem; color-scheme: dark;">
                  <option value="valorant">Valorant</option>
                  <option value="cs2">Counter-Strike 2</option>
                  <option value="apex">Apex Legends</option>
                  <option value="fortnite">Fortnite</option>
                  <option value="lol">League of Legends</option>
                  <option value="overwatch">Overwatch 2</option>
                  <option value="cyberpunk">Cyberpunk 2077</option>
                  <option value="cod">Call of Duty</option>
                </select>
              </div>
            </div>

            <button id="analyze-btn" class="btn-primary bg-brand-orange hover:bg-brand-orange-hover mt-6">
              Analyze Performance
            </button>
          </div>

          <!-- Results -->
          <div id="results" class="hidden space-y-8">
            <!-- Performance Rating -->
            <div class="card">
              <h2 class="text-2xl font-bold mb-4 text-brand-white">Performance Analysis</h2>
              <div id="performance-rating"></div>
            </div>

            <!-- Bottleneck Analysis -->
            <div class="card">
              <h2 class="text-2xl font-bold mb-4 text-brand-white">Bottleneck Detection</h2>
              <div id="bottleneck-analysis"></div>
            </div>

            <!-- Upgrade Recommendations -->
            <div class="card">
              <h2 class="text-2xl font-bold mb-4 text-brand-white">Upgrade Priority List</h2>
              <p class="text-brand-gray mb-4">Maximize FPS with these upgrades, ordered by impact</p>
              <div id="upgrade-recommendations"></div>
            </div>

            <!-- Optimization Tips -->
            <div class="card">
              <h2 class="text-2xl font-bold mb-4 text-brand-white">Free Optimization Tips</h2>
              <p class="text-brand-gray mb-4">Try these before spending money on upgrades</p>
              <div id="optimization-tips"></div>
            </div>

            <!-- Gladiator Games Comparison -->
            <div class="card bg-gradient-to-r from-brand-orange/10 to-brand-purple/10 border-brand-orange/30">
              <h2 class="text-2xl font-bold mb-4 text-brand-white">Play at Gladiator Games</h2>
              <div id="gladiator-comparison"></div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-b from-brand-black to-brand-gray-dark">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <div class="bg-gradient-to-r from-brand-orange/10 via-brand-purple/10 to-brand-cyan/10 rounded-lg p-6 border border-brand-orange/30">
            <div class="flex items-center justify-center mb-4">
              <div class="w-3 h-3 bg-brand-orange rounded-full animate-pulse mr-2"></div>
              <h2 class="text-2xl md:text-3xl font-bold text-brand-white">Play Without Frame Drops</h2>
            </div>
            <p class="text-brand-gray text-center mb-6">
              Experience smooth, high-FPS gaming on our RTX 4090-powered PCs at Gladiator Games
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="/visit" class="btn-primary bg-brand-orange-hover hover:bg-brand-orange">
                Visit Us Today
              </a>
              <a href="/specs" class="btn-primary bg-brand-black border-2 border-brand-orange-hover text-brand-orange-hover hover:bg-brand-orange-hover hover:text-brand-white">
                View Our PCs
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<script>
  const gpuPerformance: Record<string, number> = {
    rtx4090: 100, rtx4080: 92, rtx4070ti: 82, rtx4070: 75, rtx4060ti: 65, rtx4060: 58,
    rtx3090: 88, rtx3080: 80, rtx3070: 70, rtx3060ti: 62, rtx3060: 55, rtx3050: 42,
    gtx1660: 35, gtx1650: 28, gtx1080: 52,
    rx7900xtx: 95, rx7900xt: 88, rx7800xt: 78, rx7600: 60,
    rx6800xt: 82, rx6700xt: 68, rx6600: 52,
  };

  const cpuPerformance: Record<string, number> = {
    'i9-14900k': 100, 'i7-14700k': 92, 'i5-14600k': 85,
    'i9-13900k': 95, 'i7-13700k': 88, 'i5-13600k': 80,
    'i9-12900k': 88, 'i7-12700k': 82, 'i5-12600k': 75, 'i5-12400': 65,
    'r9-7950x': 98, 'r9-7900x': 92, 'r7-7700x': 86, 'r5-7600x': 78,
    'r9-5950x': 85, 'r9-5900x': 80, 'r7-5800x': 72, 'r5-5600x': 65,
  };

  document.getElementById('analyze-btn')?.addEventListener('click', () => {
    const gpu = (document.getElementById('gpu') as HTMLSelectElement).value;
    const cpu = (document.getElementById('cpu') as HTMLSelectElement).value;
    const ram = parseInt((document.getElementById('ram') as HTMLSelectElement).value);
    const resolution = (document.getElementById('resolution') as HTMLSelectElement).value;
    const targetFPS = parseInt((document.getElementById('target-fps') as HTMLSelectElement).value);
    const game = (document.getElementById('game') as HTMLSelectElement).value;

    if (!gpu || !cpu) {
      alert('Please select both GPU and CPU');
      return;
    }

    const gpuScore = gpuPerformance[gpu];
    const cpuScore = cpuPerformance[cpu];

    // Calculate expected FPS
    let baseFPS = (gpuScore + cpuScore) / 2;

    // Resolution penalty
    if (resolution === '1440p') baseFPS *= 0.7;
    if (resolution === '4k') baseFPS *= 0.4;

    // RAM bonus/penalty
    if (ram >= 32) baseFPS *= 1.05;
    if (ram < 16) baseFPS *= 0.85;

    // Game-specific multipliers
    const gameMultipliers: Record<string, number> = {
      valorant: 3.5, lol: 4.0, cs2: 3.0,
      apex: 2.2, fortnite: 2.5, overwatch: 2.8,
      cod: 2.0, cyberpunk: 1.2,
    };

    const estimatedFPS = Math.round(baseFPS * gameMultipliers[game]);

    // Performance rating
    let rating = '';
    let ratingColor = '';
    if (estimatedFPS >= targetFPS * 1.2) {
      rating = 'Excellent';
      ratingColor = 'green';
    } else if (estimatedFPS >= targetFPS) {
      rating = 'Good';
      ratingColor = 'yellow';
    } else if (estimatedFPS >= targetFPS * 0.7) {
      rating = 'Fair';
      ratingColor = 'orange';
    } else {
      rating = 'Poor';
      ratingColor = 'red';
    }

    document.getElementById('performance-rating')!.innerHTML = `
      <div class="flex items-center justify-between bg-brand-gray-dark/30 rounded-lg p-6">
        <div>
          <p class="text-brand-gray text-sm mb-2">Estimated FPS</p>
          <p class="text-${ratingColor}-500 font-bold text-5xl">${estimatedFPS}</p>
          <p class="text-brand-gray text-sm mt-2">Target: ${targetFPS} FPS</p>
        </div>
        <div class="text-right">
          <p class="text-brand-gray text-sm mb-2">Rating</p>
          <p class="text-${ratingColor}-500 font-bold text-3xl">${rating}</p>
        </div>
      </div>
    `;

    // Bottleneck analysis
    const gpuBottleneck = gpuScore < cpuScore * 0.8;
    const cpuBottleneck = cpuScore < gpuScore * 0.8;

    let bottleneckHTML = '';
    if (gpuBottleneck) {
      bottleneckHTML = `
        <div class="bg-red-500/10 border border-red-500/30 rounded-lg p-4">
          <div class="flex items-center mb-2">
            <svg class="w-6 h-6 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            <span class="text-red-500 font-bold">GPU Bottleneck Detected</span>
          </div>
          <p class="text-brand-gray">Your graphics card is limiting performance. Your CPU is faster than your GPU can keep up with.</p>
        </div>
      `;
    } else if (cpuBottleneck) {
      bottleneckHTML = `
        <div class="bg-red-500/10 border border-red-500/30 rounded-lg p-4">
          <div class="flex items-center mb-2">
            <svg class="w-6 h-6 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            <span class="text-red-500 font-bold">CPU Bottleneck Detected</span>
          </div>
          <p class="text-brand-gray">Your processor is limiting performance. Your GPU isn't being fully utilized.</p>
        </div>
      `;
    } else {
      bottleneckHTML = `
        <div class="bg-green-500/10 border border-green-500/30 rounded-lg p-4">
          <div class="flex items-center mb-2">
            <svg class="w-6 h-6 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-green-500 font-bold">Balanced System</span>
          </div>
          <p class="text-brand-gray">Your CPU and GPU are well-matched. No major bottlenecks detected.</p>
        </div>
      `;
    }

    document.getElementById('bottleneck-analysis')!.innerHTML = bottleneckHTML;

    // Upgrade recommendations
    const upgrades: Array<{ priority: number; component: string; reason: string; impact: string }> = [];

    if (gpuScore < 70) {
      upgrades.push({
        priority: 1,
        component: 'Graphics Card (GPU)',
        reason: `Upgrade to RTX 4060 or better for ${resolution} gaming`,
        impact: `+${Math.round((70 - gpuScore) * 2)} FPS`,
      });
    }

    if (cpuScore < 70) {
      upgrades.push({
        priority: 2,
        component: 'Processor (CPU)',
        reason: 'Upgrade to i5-12600K / Ryzen 5 5600X or better',
        impact: `+${Math.round((70 - cpuScore) * 1.5)} FPS`,
      });
    }

    if (ram < 16) {
      upgrades.push({
        priority: 3,
        component: 'RAM (Memory)',
        reason: '16GB is recommended for modern gaming',
        impact: '+15 FPS',
      });
    }

    if (upgrades.length === 0) {
      upgrades.push({
        priority: 1,
        component: 'No Upgrades Needed',
        reason: 'Your system is well-equipped for your target',
        impact: 'Focus on optimization',
      });
    }

    document.getElementById('upgrade-recommendations')!.innerHTML = upgrades.map(upgrade => `
      <div class="flex items-start mb-4 p-4 bg-brand-gray-dark/30 rounded-lg">
        <div class="w-8 h-8 bg-brand-orange/20 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
          <span class="text-brand-orange font-bold">${upgrade.priority}</span>
        </div>
        <div class="flex-1">
          <h4 class="font-bold text-brand-white mb-1">${upgrade.component}</h4>
          <p class="text-brand-gray text-sm mb-1">${upgrade.reason}</p>
          <p class="text-brand-orange text-sm font-semibold">Expected Impact: ${upgrade.impact}</p>
        </div>
      </div>
    `).join('');

    // Optimization tips
    const tips = [
      'Lower in-game graphics settings: shadows, anti-aliasing, and post-processing have the biggest FPS impact',
      'Update your graphics drivers to the latest version',
      'Close background applications (Discord, Chrome, Spotify) while gaming',
      'Enable Game Mode in Windows settings',
      'Make sure your monitor is plugged into your GPU, not motherboard',
      'Check temperatures - thermal throttling can cause FPS drops',
      'Use a wired ethernet connection instead of WiFi for better stability',
    ];

    document.getElementById('optimization-tips')!.innerHTML = tips.map(tip => `
      <div class="flex items-start mb-3">
        <svg class="w-5 h-5 text-brand-orange mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        <span class="text-brand-gray">${tip}</span>
      </div>
    `).join('');

    // Gladiator Games comparison
    const gladiatorFPS = Math.round(baseFPS * gameMultipliers[game] * 1.3); // 30% better hardware
    document.getElementById('gladiator-comparison')!.innerHTML = `
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <p class="text-brand-gray text-sm mb-2">Your System</p>
          <p class="text-brand-white font-bold text-4xl">${estimatedFPS} FPS</p>
        </div>
        <div>
          <p class="text-brand-gray text-sm mb-2">At Gladiator Games</p>
          <p class="text-brand-orange font-bold text-4xl">${gladiatorFPS} FPS</p>
